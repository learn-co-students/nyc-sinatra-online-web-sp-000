<table>
  <tr>
    <th>Name</th>
    <th>Landmarks</th>
    <th>Titles</th>
  </tr>
  <tr>
    <td><a href="/figures/<%=@figure.id%>"><%=@figure.name%></a></td>
    <td><ul>
      <%@figure.landmarks.each do |landmark|%>
        <li><%=landmark.name%></li>
      <%end%>
    </ul></td>
    <td><ul>
      <%@figure.titles.each do |title|%>
        <li><%=title.name%></li>
      <%end%>
    </ul></td>
  </tr>
</table>

<a class="button" href="/figures/<%=@figure.id%>/edit">Edit Figure</a>
<a class="button" href="/figures">Landmarks</a>
