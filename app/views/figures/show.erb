<table>
  <h2>Figure Name</h2>
    <br>
  <h4><%= @figure.name %></h4>
    <br>
  <h3>Landmarks:</h3>
  <ul>
    <% @figure.landmarks.each do |landmark| %>
    <li><%= landmark.name%></li>
    <% end %>
  </ul>
  <br>
  <h3>Titles:</h3>
  <ul>
    <% @figure.titles.each do |title| %>
    <li><%= title.name%></li>
    <% end %>
  </ul>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit this figure</a>
<a class="button" href="/figures">See all figures</a>
<a class="button" href="/">Home</a>
