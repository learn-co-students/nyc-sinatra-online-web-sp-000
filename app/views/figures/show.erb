<h1><%= @figure.name %></h1>
<% @figure.titles.each do |title| %>
  <p><%= title.name %></p>
<% end %>
<br>

<ul><% @figure.landmarks.each do |landmark| %>
  <li><h3><%= landmark.name %> - <%= landmark.year_completed %></h3></li>
</ul><% end %>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
<a class="button" href="/figures">Figures</a>
