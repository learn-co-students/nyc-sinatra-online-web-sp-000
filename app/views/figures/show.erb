<h1><%= @figure.name %></h1>

<h3>Landmarks</h3>
<ul>
  <% @figure.landmarks.each do |l| %>
    <li>
      <a href="/landmarks/<%= l.id %>"><%= l.name %> - <%= l.year_completed %></a>
    </li>
  <% end %>
</ul>

<h3>Titles</h3>
<ul>
  <% @figure.titles.each do |t| %>
    <li><%=t.name %></li>
  <% end %>
</ul>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
<a class="button" href="/figures">Figures</a>
