<h1><%= @figure.name %></h1>
<% @figure.titles.each do |title| %>
<li><%= title.name %></li>
<% end %>
<% @figure.landmarks.each do |landmark| %>
<li><a href="landmarks/<%= landmark.id %>"><%= landmark.name %></a></li>
<% end %>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit Figure</a>
<a class="button" href="/figures">Figures</a>