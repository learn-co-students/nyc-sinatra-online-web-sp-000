<h1><%= @figure.name %></h1>
<% if @figure.titles.count > 0 %>
<h3>Titles: </h3>
<ul><% @figure.titles.each do |title| %>
    <li><%= title.name %></li>
<% end %></ul>
<% end %>
<% if @figure.landmarks.count > 0 %>
<h3>Landmarks: </h3>
<ul><% @figure.landmarks.each do |landmark| %>
    <li><%= landmark.name %></li>
<% end %></ul>
<% end %>
