<form action="/figures" method="POST">

Name: <input type="text" name="figure[name]" id="figure_name">
<br><br>
<h3>Titles</h3>
<br>
<% @titles.each do |title| %>
    <label><%=title.name%></label>
    <input type="checkbox" value="<%=title.id %>" name="figure[title_ids][]" id="title_<%=title.id%>"></input><br>
    <% end %>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">

    
<br>

<br>
<h3>Landmarks</h3>
<br>
<% @landmarks.each do |landmark| %>
<label><%=landmark.name%></label>
<input type="checkbox" value="<%=landmark.id%>" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>"></input><br>
<% end %>

<h3>Create New Landmark:</h3>
Landmark: <input type="text" name="landmark[name]" id="new_landmark">



<input type="submit" value="Create New Figure">
</form>



  