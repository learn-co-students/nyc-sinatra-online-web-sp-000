<form  action="/figures" method="post">

  <label for="Figure_name">Name:</label>
  <input type="text" name="figure[name]" id="Figure_name">

  <h2>Titles</h2>

  <%Title.all.each do |t| %>
  <label><%=t.name%></label><input type="checkbox" name="figure[title_ids][]" value="<%=t.id%>" id="title_<%=t.id%>"></input>
  <br>
  <%end%>
  <br>
  <br>
  <label for="new_title">Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">


  <input type="submit" id="Submit" value="Create">

</form>
