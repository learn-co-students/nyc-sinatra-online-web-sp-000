<h1>Create a Figure</h1>
<br>
<form method="post" action="/figures">
  <label>Name:</label> <br>
    <input type="text" id="figure_name" name="figure[name]"> <br>
  <label>Titles:</label> <br>
    <%@titles.each do |title|%>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"> <%= title.name %> <br>
    <%end%>
  <label>Create New Title:</label> <br>
    <input type="text" name="title[name]" id="new_title"> <br>
  <label>Landmarks:</label>
    <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"> <%= landmark.name %> <br>
    <%end%>
  <label>Create New Landmark:</label> <br>
    <input type="text" name="landmark[name]" id="new_landmark"> <br>

  <input type="submit" value="Create New Figure">
</form>
