<form action="/figures" method="post">
  <p><label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name"></p>
  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input></p>
  <% end %>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title">
  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input></p>
  <% end %>
  <h2>Create New Landmark:</h2>
  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year_completed">Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <input type="submit" name="submit" value="Create New Figure">
</form>
