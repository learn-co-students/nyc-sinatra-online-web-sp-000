<h1>Create a new figure:</h1>
<form action="/figures" method="POST">
<h3>Name: <input type="text" name="figure[name]" id="figure_name"></h3><br>
<h2>Titles</h2>

<% @titles.each do |title| %>
  <ul><%= title.name %><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"></ul>
<% end %>
<h2>Create New Title:</h2>
<input type="text" name="title[name]" id="new_title">
<h2>Landmarks</h2>

<% @landmarks.each do |landmark| %>
  <ul><%= landmark.name %><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"></ul>
<% end %>

<h2>Create New Landmark:</h2>
<input type="text" name="landmark[name]" id="new_landmark">
<input type="text" name="landmark[year_completed]" id="year_completed">
<input type="submit" value="Create New Figure">
</form>
