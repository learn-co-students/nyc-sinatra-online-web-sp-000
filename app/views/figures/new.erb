<form action ="/figures" method ="post">
  Name: <input type ="text" name ="figure[name]" id ="figure_name"><br><br>
  Check Title(s):
  <% @titles.each do |title| %>
  <br><input type ="checkbox" name ="figure[title_ids][]" value ="<%=title.id%>" id ="title_<%=title.id.to_i%>"><%=title.name%><br>
  <%end%>
  <br>

  Create Title: <input type ="text" name ="title[name]" id ="new_title"><br><br>

  Check Landmark(s):
  <% @landmarks.each do |landmark| %>
  <br><input type ="checkbox" name ="figure[landmark_ids][]" value ="<%=landmark.id.to_i%>" id ="landmark_<%=landmark.id.to_i%>"><%=landmark.name%><br>
  <%end%>
  <br>

  Create Landmark: <br>
  Name: <input type ="text" name ="landmark[name]" id ="new_landmark">
  Year Completed: <input type ="text" name ="landmark[year_completed]" id ="new_landmark_year_completed]"><br><br>
  <input type ="submit" value = "Create New Figure">
</form>
