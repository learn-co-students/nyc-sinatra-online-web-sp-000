<h2>Create New Figure</h2>

<form method="POST" action="/figures">
    <label for="figure_name">Figure Name</labe>
    <input type="text" name="figure[name]" id="figure_name">

    <h3>Titles</h3>

        <% Title.all.each do |title| %>
            <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
        <% end %>
    
    <h3>Create New Title:</h3>
    <label for="new_title">Title Name: </label>
    <input type="text" name="title[name]" id="new_title"><br>
    <br>
        <% Landmark.all.each do |landmark| %>
            <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
        <% end %>

    <h3>Create New Landmark:</h3>
    <label for="new_landmark">Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    # <label for="landmark_year">Year:</label>
    # <input type="text" name="landmark[year_completed]" id="landmark_year">

    <input type="submit" id="submit" value="Create New Figure">

</form><br>
