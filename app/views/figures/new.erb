<form action="/figures" method="post">
  <label for="figure[name]">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]"><br>

  <h3>Titles</h3>
  <%@all_titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"> <%=title.name%><br>
  <%end%>

  <h3>Create New Title:</h3>
  <input type="text" id="new_title" name="title[name]"><br>

  <h3>Landmarks</h3>
  <%@all_landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"> <%=landmark.name%><br>
  <%end%>

  <h3>Create New Landmark:</h3>
  <label for="landmark[name]">Name: </label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label for="landmark[year]">Year : </label>
  <input type="text" name="landmark[year_completed]">

  <br><br>
  <input type="submit" value="Create New Figure">
</form>
