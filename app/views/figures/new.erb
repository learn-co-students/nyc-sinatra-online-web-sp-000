<h1>Add a New Figure</h1>
<form action="/figures" method="POST">
    <label>Name:</label><input type="text" id="figure_name" name="figure[name]"><br><br>

    <label><h2>Titles</h2></label>
    <% @titles.each do |t| %>
        <input type="checkbox"
        id="title_<%= t.id %>"
        name="figure[title_ids][]"
        value="<%= t.id %>">
        <%= t.name %><br>
    <% end %>
    
    <h3>Create New Title</h3>
    <label>Title:</label><input type="text" name="title[name]" id="new_title">
    
    <label><h2>Landmarks</h2></label>
    <% @landmarks.each do |l| %>
        <input type="checkbox"
        id="landmark_<%= l.id %>"
        name="figure[landmark_ids][]"
        value="<%= l.id %>">
        <%= l.name %><br>
    <% end %>
    
    <h3>Create New Landmark</h3>
    <label>Name:</label> <input type="text" name="landmark[name]" id="new_landmark"><br>

    <input type="submit" input value="Create New Figure">
</form>