<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label for="figure_name">Figure Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>

  <h3>Select Any Title(s)</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <label for="<%= title.id %>"><%= title.name %></label>
    <br>
  <% end %>
  <h3>Or Create a New Title</h3>
  <input type="text" name="title[name]" id="new_title">

  <h3>Select Any Historical Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
    <label for="<%= landmark.id %>"><%= landmark.name %></label>
    <br>
  <% end %>
  <h3>Or Create a New Landmark</h3>
  <label for="landmark_name">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year_completed">Year Completed: </label>
  <input type="number" name="landmark[year_completed]" id="landmark_year_completed">
  <br>

  <input type="submit" value="Create New Figure" id="submit">
</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
