<form method="post" action="/figures">
<label> Name: </label>
  <input type="text" id="figure_name" name="figure[name]">
<h2>Titles</h2>
  <%Title.all.each do |title|%>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"> <%=title.name%>
  <br>
  <% end %>

  <h4> Create new title </h4>
    <input type="text" id="new_title" name="title[name]">
    <br>

  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%=landmark.name%>
  <br>
  <% end %>
  <h4>Create new Landmark</h4>
  <input type="text" id="new_landmark" name="landmark[name]">

<input type="submit" id="submit" value="Create New Figure">
</form>
