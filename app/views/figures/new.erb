<h1>Create A New Figure</h1>
<form action="/figures/new" method="post">
<label for="">Name</label>
<input type="text" name="figure[name]" id="figure_name"><br>
<h2>Titles</h2>
<% @titles.each do |title| %>
<h3><%= title.name %></h3>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><br>
<% end %>
<h2>Create New Title:</h2>
<input type="text" name="title[name]" id="new_title">
<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
<h3><%= landmark.name %></h3>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><br>
<% end %>
<h2>Create New Landmark:</h2>
<input type="text" name="landmark[name]" id="new_landmark">
<button type="submit" name="Create New Figure">Create New Figure</button>
</form>
