<form action="/figures" method="post">
  <h1>Name:</h1>
  <input type="text" id="figure_name" name="figure[name]">
  <br>

  <h2>Titles</h2>

  <%Title.all.each do |title|%>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><%= title.name %></input><br>
  <%end%>

  <h4>Create New Title:</h4>
  <input type="text" name="title[name]" id="new_title">

  <h4>Landmarks</h4>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%></input><br>
  <%end%>

  <h4>Create New Landmark:</h4>
  <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year</label>
    <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
<br></br>
</form>
