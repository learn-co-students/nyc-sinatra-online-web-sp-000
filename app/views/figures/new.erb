<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
    <h2><label for="figure_name">Figure Name:</label></h2>
    <input type="text" name="figure[name]" id="figure_name" placeholder="Enter name here">

    <br>

    <h2><label for="figure_titles">Figure Titles:</label></h2>

    <% Title.all.each do |title| %>
        <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><br>
    <% end %>

    <h2><label for="figure_landmarks">Figure Landmarks:</label></h2>

    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>

    <h2><label for="title_name">New Title:</label></h2>
    <input type="text" name="title[name]" id="new_title" placeholder="Enter new title here">

    <h2><label for="landmark_name">New Landmark:</label></h2>
    <input type="text" name="landmark[name]" id="new_landmark" placeholder="Enter new landmark here">

    <br><br>

    <input type="submit" value="Create New Figure">
</form>