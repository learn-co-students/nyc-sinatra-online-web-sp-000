<h1>New Figure</h1>

<form action="/figures" method="POST">
<label for="name">Name:</label>
<input type="text" name="figure[name]" id="figure_name"><br><br>
<label>Add Titles:</label><br>
  <% Title.all.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= t.id %>" value="<%= t.id %>"><%= t.name %><br>
  <% end %>
<label for ="title[name]">Create New Title:</label>
<input type="text" name="title[name]" id="new_title"><br><br>
<label>Add Landmarks:</label><br>
<% Landmark.all.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%= l.id %>"><%= l.name %><br>
<% end %>
<label for ="landmark[name]">Create New Landmark:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<br><button type="submit" id="create_new_figure">Create New Figure</button>
</form>