<h1>Create a New Figure!</h1>

<form action="/figures" method="POST">
  <label for="Name">Figure Name</label></br>
  <input type="text" id = "figure_name" name="figure[name]"></br>

  <p>Select an existing title or create a new one below.</p>


  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>"><%= title.name %></input><br>
  <% end %>
  <br>

  <h3>New Title</h3>
  <label>New Title</label>
  <br>
  <input type="text" name="title[name]" id="new_title"></input>
  <br><br>

  <p>Select an existing landmark or create a new one below.</p>

  <h3>Existing Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>
  <br>

  <h3>New Landmarks</h3>
  <label>New Landmark</label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <br><br>

  <input type="submit" id="Create New Figure">

</form>
