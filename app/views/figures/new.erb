<h1>Create a Figure</h1>
<form action = "/figures" method = "POST">
<label>Name</label>
<input type = "text" id = "figure_name" name = "figure[name]" >
<br>

<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
<input type = "checkbox" id = "landmark_<%= landmark.id %>" name = "figure[landmark_ids][]" value = <%= landmark.id %>><%= landmark.name %></input>
<% end %>
<br>

<h2>Create New Landmark</h2>
<label>Name: </label>
<input type = "text" id = "new_landmark" name = "landmark[name]">
<label>Year Completed: </label>
<input type = "integer" id = "new_landmark_year_completed" name = "landmark[year_completed]">
<br>

<h2>Titles</h2>
<% @titles.each do |title| %>
    <input type = "checkbox" id = "title_<%= title.id %>" name = "figure[title_ids][]" value = "<%= title.id %>"><%= title.name %></input>
    <% end %>
    <br>

<h2>Create New Title</h2>
<label>Name: </label>
<input type = "text" id = "new_title" name = "title[name]">
<br>

<input type = "submit" value = "Create New Figure">
</form>