<h2>Create a Figure</h2>

<form method="post" action="/figures">
    <label for="figure_name">Name: </label>
    <input type="text" name="figure[name]" id="figure_name"></input>
    <br><br>

    <h3>Titles</h3>

    <% @titles.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"></input><br>
    <% end %>
    <br>

    <h3>Create New Title:</h3>
    
    <input type="text" name="title[name]" id="new_title"></input>
    <br>

    <h3>Landmarks</h3>

    <% @landmarks.each do |landmark| %>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"></input><br>
    <% end %>
    <br>

    <h3>Create New Landmark:</h3>

    <label for="landmark_name">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></input>
    <label for="landmark_year">Year:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year"></input>
    <br><br>

    <input type="submit" value="Create New Figure"></input>
</form>


<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>