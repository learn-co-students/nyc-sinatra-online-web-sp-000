<form action="/figures" method="POST">
  <label for="name">Name </label><input type="text" name="figure[name]" id="figure_name"/><br>
  <h3><label for="titles">Titles</label></h3>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" 
      value="<%= title.id %>"><%= title.name %><br>
    <% end %>
  <h3><label for="new_title">Create New Title:</label></h3>
    <input type="text" name="title[name]" id="new_title"/><br>
  <h3><label for="landmarks">Landmarks</label></h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" 
      value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
  <h3><label for="new_landmark">Create New Landmark:</label></h3>
    <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark"/>
    <label>Year:</label><input type="text" name="landmark[year_completed]" id="landmark_year"/>
    <input type="submit" value="Create New Figure"/>
</form>