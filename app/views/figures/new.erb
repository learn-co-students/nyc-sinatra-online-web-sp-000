<h2>Create New Figure</h2>

<form method="POST" action="/figures">
  <label for="name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= "title_#{title.id}" %>"
      value="<%=title.id%>">
      <%= title.name %>
    </input><br />
  <% end %>

  <h2>Create New Title:</h2>
  <label for="title_name">Name:</label>
  <input type="text" name="title[name]" id="new_title" />

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= "landmark_#{landmark.id}" %>"
      value="<%=landmark.id%>">
      <%= landmark.name %>
    </input><br />
  <% end %>

  <h2>Create New Landmark:</h2>
  <label for="new_landmark">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark" />

  <label for="landmark_year_completed">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" />

  <input type="submit" name="submit" id="submit" value="Create New Figure" />
</form>
