<h1>Create a Figure:</h1>
<form action="/figures" method="post">
  <p>
    <label for="figure_name">Name: </label>
    <input type="text" name="figure[name]" id="figure_name">
  </p>

  <h3>Title: </h3>
  <% @titles.each do |title| %>
    <p>
      <input
        type="checkbox"
        name="figure[title_ids][]"
        id="title_<%= title.id %>"
        value="<%= title.id %>"
      >
      <label for="title_<%= title.id %>"><%= title.name %></label>
    </p>
  <% end %>

  <h4>Create a new title:</h4>
  <p><input type="text" name="title[name]" id="new_title"></p>

  <h3>Landmark: </h3>
  <% @landmarks.each do |landmark| %>
    <p>
      <input
        type="checkbox"
        name="figure[landmark_ids][]"
        id="landmark_<%= landmark.id %>"
        value="<%= landmark.id %>"
      >
      <label for="landmark_<%= landmark.id %>" ><%= landmark.name %></label>
    </p>
  <% end %>

  <h4>Create a new landmark:</h4>
  <p>
    <label for="new_landmark">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
  </p>
  <p>
    <label for="landmark[year_completed]">Year Completed: </label>
    <input type="text" name="landmark[year_completed]" id="landmark[year_completed]">
  </p>


  <input type="submit" value="Create New Figure">
</form>
