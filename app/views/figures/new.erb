<h2>Create New Figure</h2>
<!-- add content here -->
<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]" placeholder="Figure's name..">
  <br><br>
  <label for="titles">Titles</label><br>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id%>" value="<%= title.id%>"><%= title.name %></input><br>
  <% end %>
  <br>
  <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title" placeholder="Title's name.."></input>
    <h3>Landmarks:</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id%>" value="<%= landmark.id%>"><%= landmark.name %></input><br>
  <% end %>
  <h3>Create New Landmark:</h3>
  <label>Name</label>
  <input type="text" id="new_landmark" name="landmark[name]" placeholder="Landmark's name..">
  <label>Year</label>
  <input type="text" id="landmark_year" name="landmark[year]" placeholder="Landmark's year..">
  <input type="submit" value="Create New Figure">
  <br><br>
</form>





<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
