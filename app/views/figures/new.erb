<h1>Create New Figure</h1>

<form action="/figures" method="post">
<!--Name -->
<label for="figure_name">Name</label>
<input type="text" name="figure[name]" id="figure_name">
<br>
<!--Titles -->
<h2>Titles</h2>
<% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%><br>
<% end %>
<!--Create New Title -->
<h2>Create New Title:</h2>
<input type="text" name="title[name]" id="new_title">
<!--Landmarks -->
<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%><br>
<% end %>
<!--Create New Landmark -->
<h2>Create New Landmark:</h2>
<label for="landmark_name">Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label for="landmark_year">Year:</label>
<input type="text" name="landmark[year_completed]" id="landmark_year">
<!--Submit Button -->
<br>
<br>
<input type="submit" value="Create New Figure">
</form>