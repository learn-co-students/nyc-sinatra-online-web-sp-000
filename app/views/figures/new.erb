<h1>Add new figure</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Name</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br>

  <h4>Titles</h4>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">

      <% end %>
  <br>

  <h4>Create New Title:</h4>
    <input type="text" id="new_title" name"title[name]">
  <br>

  <h4>Landmarks</h4>
    <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <% end %>
  <br>

  <h4>Create New Landmark:</h4>
    <label>Name:</label>
    <input type="text" id="new_landmark" name"landmark[name]">
    <label>Year:</label>
    <input type="text" name"landmark[year_completed]">
  <br>

  <input type="submit" value="Create New Figure">
</form>
