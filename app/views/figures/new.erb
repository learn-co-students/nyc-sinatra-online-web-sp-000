<h1>Create a new Figures</h1>

<form action="/figures" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="figure[name]"id="figure_name">
 <label><h4>Titles</h4></label>
  <%Title.all.each do |t| %>
  <label><%=t.name%></label>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>">

  <%end%>

<label><h4>Create New Title:</h4></label>
  <input type="text" name="title[name]"id="new_title">

<label><h4>Landmarks</h4></label>
  <%Landmark.all.each do |l| %>
  <label><%=l.name%></label>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>">
  <%end%>

<label><h4>Create New Landmark:</h4></label>
 <label>Name:</label>
<input type="text" name="landmark[name]"id="new_landmark">
<label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form>
