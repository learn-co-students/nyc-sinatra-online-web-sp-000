<form action="/figures" method="POST">
  <div>
    <label for="figure[name]">Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
  </div>
  
  <h2>Titles</h2>
    <%Title.all.each do |title|%>
    <div>
      <label for="figure[title_ids][]"><%=title.name%></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
    </div>
    <%end%>
    
  <h2>Create New Title:</h2>  
  <div>
    <label for="title[name]">Title Name:</label>
    <input type="text" name="title[name]" id="new_title">
  </div>

  <h2>Landmarks</h2>
    <%Landmark.all.each do |landmark|%>
    <div>
      <label for="figure[landmark_ids][]"><%=landmark.name%></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>">
    </div>
  <%end%>  
  

  <h2>Create New Landmark</h2>
  <div>
    <label for="landmark[name]">LandMark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    
    <label for="landmark[name]">Year:</label>
    <input type="text" name="landmark[year]" id="year">
  </div>
  <br>
  <div>
    <button type="submit" id="create">Create New Figure</button>
  </div>
</form>


    