<h2>Create New Figure</h2>

<!-- add content here -->
<form action="/figures" method="post">
  Name: <input type="text" id="figure_name" name="figure[name]"/>
  <br>
  <h3>Titles</h3>

  <% @titles.each do |title| %>
  <%= title.name %> <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"/>
  <% end %>

  <h4>Create New Title</h4>
  <input type="text" id="new_title" name="title[name]"/>

  <h3>Landmarks</h3>

  <% @landmarks.each do |landmark| %>
  <%= landmark.name %> <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"/>
  <% end %>

  <h4>Create New Landmark</h4>
  Name: <input type="text" id="new_landmark" name="landmark[name]"/>
  Year: <input type="text" id="landmark[year_completed]" name="landmark[year_completed]"/>

  <input type="submit" value="Create New Figure"/>

</form>

<a class="button" href="/figures">Figures</a>
