<h1>Create Figure</h1>
<form action="/figures" method="post">
  <label for="figure_name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name">

  <h2>Titles</h2>
  <% Title.all.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %> </input><br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title[name]" id="new_title">

  <h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %> </input><br>
  <% end %>

  <h2>Create New Landmark</h2>
  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="landmark_year">Year: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year">

  <input type="submit" value="Create New Figure">
</form>
