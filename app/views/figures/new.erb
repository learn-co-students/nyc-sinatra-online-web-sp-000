

<form method="POST" action="/figures">

  <label><h1>Name:</h1></label><input type="text" name="figure[name]" id="figure_name">

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <%= title.name %>
    <br>
  <% end %><br>

  <label>Title:</label><input type="text" name="title[name]" id="new_title">
   <br>

  <% @landmarks.each do |landmark| %>
   <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
   <%= landmark.name %>
   <br>
 <% end %><br>

 <label>Landmark:</label><input type="text" name="landmark[name]" id="new_landmark">  <br>



  <input type="submit" value="Create New Figure">

</form>
