<h2>Create a Figure</h2>

<form action="/figures" method="POST">
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name"></br></br>

  <label for="new_title">Figure's Title:</label>
  <input type="text" name="title[name]" id="new_title"></br>

  <p>Or choose an existing Title:</p>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"> <%= title.name %></br>
  <% end %>
  </br>

  <label for="new_landmark">Famous Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></br>

  <p> Or choose an existing Landmark:</p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"> <%= landmark.name %></br>
  <% end %>
  </br>

  <button type="submit" id="submit">Create New Figure</button>
</form>