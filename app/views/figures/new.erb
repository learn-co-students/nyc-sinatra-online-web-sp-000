<h1>Create a New Figure</h1>

<form method = "POST" action = "/figures">
<label><strong>Name: </strong></label>
<input type = "text" name = "figure[name]" id = "figure_name"> 
<br>
<br>
<label><strong>Existing Titles</strong></label>
<br>
<% @titles.each do |title| %>
    <%= title.name %>
    <input type = "checkbox" name = "figure[title_ids][]" value = "<%= title.id %>" id = "title_<%= title.id %>"> 
    <br>
<% end %>
<br>
<label><strong>Create New Title: </strong></label>
<input type = "text" name = "title[name]" id = "new_title">
<br>
<br>
<label><strong>Existing Landmarks</strong></label>
<br>
<% @landmarks.each do |landmark| %>
    <%= landmark.name %>
    <input type = "checkbox" name = "figure[landmark_ids][]" value = "<%= landmark.id %>" id = "landmark_<%=landmark.id %>">    
    <br>
<% end %>
<br>
<label><strong>Create New Landmark:</strong></label>
<br>
<label>Name: </label>
<input type = "text" name = "landmark[name]" id = "new_landmark"> 
<label>Year: </label> 
<input type = "text" name = "landmark[year_completed]" id = "new_landmark_year">
<br>
<br>
<input type = "submit" value = "Create New Figure">

</form>
