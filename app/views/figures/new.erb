<h2>Create New Figure</h2>

<form action='/figures' method='POST'>

  <label>Name:</label>
    <input type='text' id='figure_name' name='figure[name]'><br>
  <br>
  <label>Titles:</label><br>
    <% Title.all.each do |title| %>
      <input type='checkbox' id='title_<%= title.id %>' name='figure[title_ids][]' value='<%= title.id %>'> <%= title.name %></input><br>
    <% end %>
  <br>
  <label>Create New Title: </label>
    <input type='text' name='title[name]' id='new_title'><br>
  <br>
  <label>Landmarks: </label><br>
    <% Landmark.all.each do |landmark| %>
      <input type='checkbox' id='landmark_<%= landmark.id %>' name='figure[landmark_ids][]' value='<%= landmark.id %>'> <%= landmark.name %></input><br>
    <% end %>
  <br>
  <label>Create New Landmark: </label>
    <input type='text' name='landmark[name]' id='new_landmark'>
  <label>Year: </label>
    <input type='text' name='landmark[year_completed]' id='year_completed'><br>
  <br>
  <input type='submit' value="Create New Figure">
</form>
<a class="button" href="/figure">Figures</a>
<a class="button" href="/">Home</a>