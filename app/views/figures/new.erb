<form method="post" action="/figures">
<p><label for="figure_name">Name</label>
<input type="text" name="figure[name]" id="figure_name" /></p>

<h3>Titles</h3>
<%@titles.each do |title|%>
  <p><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%="title_#{title.id}"%>"> <%=title.name%></p>
<%end%>

<h3>Create new title</h3>
<p><label for="new_title">Name</label>
<input type="text" name="title[name]" id="new_title"/></p>

<h3>Landmarks</h3>
<%@landmarks.each do |landmark|%>
  <p><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%="landmark_#{landmark.id}"%>"><%=landmark.name%></p>
<%end%>

<h3>Create new landmark</h3>
<p><label for="new_landmark">Name</label>
<input type="text" name="landmark[name]" id="new_landmark"/></p>

<input type="submit" value="Create New Figure">

</form>

