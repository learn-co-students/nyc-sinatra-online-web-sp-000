<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Figure Name</label>

  <br>

  <input type="text" name="figure[name]" id="figure_name">

  <br>

  <label><h4>Titles</h4></label>
  <% Title.all.each do |title| %>
      <label for="title_<%= title.id %>"> <%= title.name %> </label><br>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
    <% end %>

    <label for="new_title">Create New Title</label>
    <input type="text" name="title[name]" id="new_title"><br>

    <label><h4>Landmarks</h4></label>
    <% Landmark.all.each do |landmark| %>
        <label for="landmark_<%= landmark.id %>"> <%= landmark.name %> </label><br>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
      <% end %>

    <label for="new_landmark">Create New Landmark</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit" value="Create New Figure">
</form>
