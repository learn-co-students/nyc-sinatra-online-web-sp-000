<h2>Create New Figure</h2>

<form action="/figures" method="POST">

<label for="figure_name">Name</label>
    <input type="text" name="figure[name]" id="figure_name">

<h3>Titles</h3>

<% @titles.each do |title| %>
    <label for=" <%= title.id%>"> <%=title.name%> </label>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id%>">
<% end %>

<h3>Create New Title</h3>

    <input type="text" name="title[name]" id="new_title"> </input>


<h3>Landmarks</h3>

<% @landmarks.each do |landmark| %>
    <label for="<%= landmark.id%>"> <%=landmark.name%> </label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id%>">
<% end %>

<h3> Create New Landmark: </h3>
    <input type="text" name="landmark[name]" id="new_landmark"></input>


<br>
<input type="submit" value="Create New Figure" id="Create">

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
