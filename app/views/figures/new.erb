<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <p>Name <input type="text" name="figure[name]" id="figure_name"></p>

  <h3>Titles</h3>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input><br>
  <% end %>

  <h3>Create New Title:</h3>

  Name <input type="text" name="title[name]" id="new_title">

  <h3>Landmarks</h3>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>

  <h3>Create New Landmark:</h3>

  Name: <input type="text" name="landmark[name]" id="new_landmark">
  Year: <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
