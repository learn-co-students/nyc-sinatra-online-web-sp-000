<form method='POST' action='/figures'>
  <input type="text" id="figure_name" name="figure[name]">



  <h2>Titles</h2>

  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.name %>"><label for="title_<%= title.id %>"><%= title.name %></label>
  <% end %>

  <h3>New Title</h3>

  <input type="text" id="new_title" name="title[name]">



  <h2>Landmarks</h2>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.name %>"><label for="title_<%= landmark.id %>"><%= landmark.name %></label>
  <% end %>

  <h3>New Landmark</h3>
  <input type="text" id="new_landmark" name="landmark[name]">





    <input type="submit" value="Create New Figure">
</form>
