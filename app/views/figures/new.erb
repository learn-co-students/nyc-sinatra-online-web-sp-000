<form action="/figures" method="POST">

    <label>Name</label><br>
    <input type="text" name="figure[name]" id="figure_name"><br> 

    <label><h4>Titles</h4></label>
        <% Title.all.map do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
    <% end %>
    
    <label>Create New Title</label><br>
    <input type="text" name="title[name]" id="new_title"><br>


    <label>Landmarks</label>
    <% Landmark.all.map do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value=<%= landmark.id  %>><br>
    <% end %>

    <label>Create New Landmark</label><br>
    <input type="text" name="landmark[name]" id="new_landmark"><br>


<button type="submit">Create New Figure</button><br>
</form>
