<h2>Create New Figure</h2>
<form method="POST" action='/figures'>
<h2 label for="figure_name">Name:</label></h2>
<input type="text" id="figure_name" name="figure[name]">

<h2>Titles</h2>

<% @titles.each do |title| %>
    <label for="title_<%=title.id%>"><%= title.name %></label>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><br>
<% end %>

<h2>Create New Title:</h2>
<input type="text" id="new_title" name="title[name]">

<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
    <label for="landmark_<%=landmark.id%>"><%= landmark.name %></label>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
<% end %>

<h2>Create New Landmark:</h2>
<label for="landmark[name]">Name:</label>
<input type="text" id="new_landmark" name="landmark[name]">
<label for="landmark[year]">Year:</label>
<input type="text" id="new_landmark_year" name="landmark[year_completed]">

<button type="submit" id="Create New Figure">Create New Figure</button>
</form>


<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
