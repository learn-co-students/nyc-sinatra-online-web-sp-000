<h1>Create a new Figure</h1>

<form action="/figures" method="post">
    <label>Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
     <br>
     <br> 
    <label>Title(s):</label>
    <p>Choose from en existing Title</p>
    <% @titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" >
        <%= title.name %><br>
    <% end %>
    <br> 
    <p>and/or Create a New Title</p>
    <label>Title:</label>
    <input type="text" name="title[name]" id="new_title">
     <br>
     <br>
    <label>Landmark(s):</label>
    <p>Choose from en existing Landmark</p>
    <% @landmarks.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" >
        <%= landmark.name %><br>
    <% end %>
     <br> 
     <br>
    <p>and/or Create a New Landmark</p>
    <label>Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
     <br>
     <br>
    <input type="submit" value = "Create New Figure">
</form>