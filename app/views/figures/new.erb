<h1>New Figure</h1>

<form action="/figures" method="POST">
	<p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

	<p>Titles:</p>
	<% @titles.each do |title| %>
		<input type="checkbox" name="figure[title_ids][]" id="<%= "title_#{title.id}" %>" value="<%= title.id %>"><%= title.name %> <br>
	<% end %>
	<p>New Title: <input type="text" name="title[name]" id="new_title"></p>

	<p>Landmarks:</p>
	<% @landmarks.each do |landmark| %>
		<input type="checkbox" name="figure[landmark_ids][]" id="<%= "landmark_#{landmark.id}" %>" value="<%= landmark.id %>"><%= landmark.name %> <br>
	<% end %>
	<p>New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>

	<input type="submit" value="Create New Figure">
</form>