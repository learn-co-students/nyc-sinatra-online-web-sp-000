<h2>Create New Figure</h2>

<form action="/figures" method="post">

    Figure: <input type="text" name="figure[name]" id="figure_name" placeholder="Name"><br><br>

    <% @titles.each do |title| %> 
       <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>  
    <% end %><br>
    Create New Title: <input type="text" name="title[name]" id="new_title" placeholder="Title"><br><br>

   
    <% @landmarks.each do |landmark| %> 
       <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>  
    <% end %><br>
    Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark" placeholder="Landmark"><br><br>

    Year Completed: <input type="text" name="landmark[year_completed]" id="landmark_year_completed" placeholder="Year Completed"><br><br>
    
    <input type="submit" value="Create New Figure"><br><br>

</form>

<a class="button" href="/figures">Figures</a><br>
