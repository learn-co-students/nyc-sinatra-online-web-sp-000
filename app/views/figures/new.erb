<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br><br>

  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <label for="title"><%= title.name %></label>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>

  <br>

  <h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title">

  <br><br>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <label for="landmark"><%= landmark.name %></label>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <% end %>

  <br>

  <h3>Create New Landmark</h3>
    <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Create New Figure">
</form>

<br><br><br>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
