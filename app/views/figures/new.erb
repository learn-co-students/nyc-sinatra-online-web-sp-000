<form action="/figures" method="POST">
  
<label>NAME:</label>
<input type="text" id="figure_name" name="figure[name]" ><br></br>


<label>TITLES:</label> 
   <% Title.all.each do |title| %>
    <ul><label><%= title.name %></label> <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"> </ul> 
   <% end %>
   
<label>CREATE NEW TITLE:</label> 
<input type="text" name="title[name]" id="new_title"><br></br>

<label>LANDMARKS:</label> 
   <% Landmark.all.each do |landmark| %>
     <li><%= landmark.name %><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"></li>
   <% end %><br></br>

<label>CREATE NEW LANDMARKS:</label> <br></br>
<label> Name: </label>  <input type="text" name="landmark[name]" id="new_landmark"></input>
<label> Year: </label>  <input type="text" name="landmark[year_completed]"></input>
<input type="submit" value="Create New Figure">

</form>