<h2>Create New Figure</h2>

<form action="/figures" method="POST">

  <label>Name:</label>
  <input id="figure_name" type="text" name="figure[name]">
  <br>
  <br>

  <label>Titles:</label><br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <%end%>
  <br><br>
  <label>Create New Title:</label>
  <br>

  <input id="new_title" type="text" name="title[name]"></input>
  <br>
  <br>


  <label>Landmarks:</label><br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  <br><br>
  <label>Create New Landmark:</label>
  <br>

  Name: <input id="new_landmark" type="text" name="landmark[name]"></input>
  Year: <input id="new_landmark_year_completed" type="text" name="landmark[year_completed]"></input>
  <br>
  <br>

  <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
