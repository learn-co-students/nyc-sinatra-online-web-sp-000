<h2>New Figure:</h2>
<form method='post' action='/figures'>
	<label for='figure_name'>name</label>
  <input type='text' name='figure[name]' id='figure_name'>
  <h2>Titles</h2>
  <% @titles.each do |t| %>
  	<label for='<%= t.id %>'><%= t.name %></label>
	  <input type='checkbox' name='figure[title_ids][]' value='<%= t.id %>' id="title_<%= t.id %>">
  <% end %>
  <h2>Landmarks</h2>
  <% @landmarks.each do |l| %>
  	<label for='<%= l.id %>'><%= l.name %></label>
  	<input type='checkbox' name='figure[landmark_ids][]' value='<%= l.id %>' id='landmark_<%= l.id %>'>
	<% end %>
	<h2>New Landmarks</h2>
  <input type='text' name='landmark[name]' id='new_landmark'>
  <h2>New Title</h2>
  <input type='text' name='title[name]' id='new_title'>
	<br>
	<br>
  <input type="submit" name="Create New Figure" value='Create New Figure'>
 </form>