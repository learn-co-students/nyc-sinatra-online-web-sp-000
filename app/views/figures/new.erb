<h1>Create a Figure</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" />
  <br>
  <label>Choose a Landmark or Create a New One</label>
  <br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input> 
  <% end %>
  <br>
  <label>New Landmark</label>
  <br>
  <label for="new_landmark">Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <label for="year">Year Completed: </label>
  <input type="text" name="landmark[year_completed]" id="year" />
  <br>
  <label>Choose a Title or Create a New One</label>
  <br>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input> 
  <% end %>
  <br>
  <label>New Title</label>
  <br>
  <label for="new_title">Title Name: </label>
  <input type="text" name="title[name]" id="new_title" />
  <br>
  <input type="submit" value="Create New Figure" />
</form>