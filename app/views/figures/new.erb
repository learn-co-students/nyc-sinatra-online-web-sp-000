

<h2>NYC Historical Figures</h2>

<h3>Add a new figure:</h3>
  
<form action="/figures" method="POST">

    <label for="figure_name">Name</label>
    <input type="text" name="figure[name]" id="figure_name">

    <h3>Titles</h3>
        <% @titles.each do |title| %>
        <label for="title_<%= title.id %>"><%= title.name %></label><br>
            <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%title.id%>">
            <% end %><br><br>
            
    <h4>Create New Title</h4>
        <label>Title</label>
        <input type="text" name="title[name]" id="new_title">
    <br>
    <br>
    <h3>Landmarks</h3>
        <% @landmarks.each do |landmark| %>
        <label for="landmark_<%= landmark.id %>"><%=landmark.name %></label><br>
            <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
            <% end %><br>


    <h4>Create New Landmark</h4>
    <label for="landmark">Name</label>
    <input type="text" name="landmark[name]" id="new_landmark">

    <label for="landmark">Year</label>
    <input type="text" name="landmark[year]" id="new_landmark_year"><br><br>
    
    <input type="button" value="Create New Figure">

</form>