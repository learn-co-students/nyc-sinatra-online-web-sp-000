<h1> Add a New Figure </h1>

<form action="/figures" method="post">

<label for="name"> Figure Name: </label>
<input type="text" id="figure_name" name="figure[name]"><br></br>

    <label> Choose a Title: </label><br>
    <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>">
        <%end%><br>
    <label> Or Create a New Title: </label>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <label> Choose a Landmark: </label><br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %> </label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
        <%end%>
    <label> Or Create a New Landmark: </label>
    <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br><br>
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]">
    
    <input type="submit" value="Create New Figure">

</form>