<h1>Create New Figure</h1>
<form action="/figures/new" method="post">
<p><label for="name">Name</label>
<input type="text" name="figure[name]" id="figure_name"></p>
<h4>Titles</h4>
<p>
<% @titles.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><br>
<% end %>
</p>
<h4>Create New Title:</h4>
<p>
<input type="text" name="title[name]" id="new_title">
</p>
<h4>Landmarks</h4>
<p>
<% @landmarks.each do |landmark| %>
    <label for=""landmark_<%= landmark.id %>""><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><br>
<% end %>
</p>
<h4>Create New Landmark:</h4>
<p>
<label for="new_landmark_name">Name:</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label for="new_landmark_year">Year:</label>
<input type="text" name="landmark[year_completed]" id="new_landmark_year">
<input type="submit" id="Create" value="Create New Figure">
</form>
</p>