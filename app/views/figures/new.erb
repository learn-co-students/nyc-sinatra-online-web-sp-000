<h1>Create A New Figure</h1>
<form action="/figures" method="post">
	<label for="figure_name">Name</label>
	<input type="text" id="figure_name" name="figure[name]"><br><br>

	<h3>Titles</h3>
	
	<% @titles.each do |title| %>
	  <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><br>
	<% end %> <br>

	<h3>Create New Title:</h3>
	<input type="text" id="new_title" name="title[name]"><br>

	<h3>Landmarks</h3>

	<% @landmarks.each do |landmark| %>
	  <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><br>
	<% end %> <br>

	<h3>Create New Landmark:</h3>
	<label for="new_landmark">Name:</label>
	<input type="text" id="new_landmark" name="landmark[name]"><br>
	<label for="year_completed">Year:</label>
	<input type="number" id="year_completed" name="landmark[year_completed]"><br>

	<input type="submit" value="Create New Figure">

</form>