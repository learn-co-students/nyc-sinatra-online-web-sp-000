<h2>All Historical Figures</h2>
<% @figures.each do |figure| %>
  <h3><%= figure.name %></h3>
  <% figure.titles.each do |title| %>
    <p><%= title.name %><p>
  <% end %>
  <ul>
    <% figure.landmarks.each do |landmark| %>
      <li><h3><%= landmark.name %></h3></li>
    <% end %>
  </ul>
<% end %>


<a class="button" href="/figures">Figures</a>
