<h2>All Historical Figures</h2>

<%@figures.each do |figure|%>
<h2><a href="/figures/<%=figure.id%>"><%= figure.name %></a>
</h2>

<h3>Landmarks</h3>
  <%figure.landmarks.each do |landmark|%>
    <ul>
      <li><%= landmark.name %>, completed in <%= landmark.year_completed %></li>
    </ul>
    <%end%>

<p>
<h3>Titles</h3>
  <%figure.titles.each do |title|%>
  <ul>
    <li><%= title.name %></li>
  </ul>
  <%end%>
</p>

<%end%>

<p>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
</p>
