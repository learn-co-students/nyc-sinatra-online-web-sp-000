<h1><%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  
  <div>
    <label for="figure[name]">Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
  </div>
  
  <h2>Titles</h2>
  <%Title.all.each do |title|%>
    <div>
      <label for="figure[title_ids][]"><%=title.name%></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
    </div>
  <%end%>
  
  <div>
    <label for="landmark[name]">LandMark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    
    <label for="landmark[name]">Year:</label>
    <input type="text" name="landmark[year]" id="year">
  </div>
  
  <br>
  <div>
    <button type="submit" id="create">Edit Figure</button>
  </div>
</form>
