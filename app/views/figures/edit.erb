<h2>Edit Historical Figure</h2>

<form action="/figures/<%=@figure.id%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="name">Name </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
    <br>

    <h2>Titles</h2>
    <br>
    <%Title.all.each do |t|%>
        <label for="<%=t.name%>"><%=t.name%></label> 
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>" <%='checked' if @figure.titles.include?(t)%>><br>
    <%end%>
    <br>

    <h2>Create New Title: </h2>
    <input type="text" name="title[name]" id="new_title">
    <br>

    <h2>Landmarks</h2>
     <br>
    <%Landmark.all.each do |l|%>
        <label for="<%=l.name%>"><%=l.name%></label> 
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>" <%='checked' if @figure.landmarks.include?(l)%>><br>
    <%end%>
    <br>

    <h2>Create New Landmark: </h2>
    <label for="landmark_name">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="year_completed">Year: </label>
    <input type="text" name="landmark[year_completed]" id="year_completed">
    <br>
    <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>