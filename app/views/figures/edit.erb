<h2>Edit Historical Figure</h2>

<!-- add content here -->
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Edit Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br><br>

  <label>Select Titles: </label><br>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>><%= title.name %><br>
  <% end %>
  <br>

  <label>Create New Title: </label>
  <input type="text" id="new_title" name="title[name]"><br><br>

  <label>Select Landmarks: </label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
  <% end %>
  <br>

  <label>Create New Landmark: </label><br>
  <label>Name: </label>
  <input type="text" id="new_landmark" name="landmark[name]"><br>
  <label>Year Completed: </label>
  <input type="integer" id="new_landmark_year_completed" name="landmark[year_completed]"><br>
  <br>

  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
