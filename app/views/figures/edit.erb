<h1>Edit Figure</h1>
<form action="/figures" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="hidden" type="hidden" name="figure_id" value="<%=@figure.id%>">
  <label for="figure_name">Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>"><br>

  <h2>Titles</h2>
  <%Title.all.each do |t|%>
    <label for="<%= t.name%>"><%= t.name%></label>
    <input type="checkbox" id="title_<%= t.id%>" name="figure[title_ids][]" value="<%= t.id%>" <%='checked' if @figure.titles.include?(t) %>><br>   
  <%end%>

  <h2>Create New Title:</h2>
  <input type="text" id="new_title" name="title[name]">

  <h2>Landmarks</h2>
  <%Landmark.all.each do |l|%>
    <label for="<%= l.name%>"><%= l.name%></label>
    <input type="checkbox" id="landmark_<%= l.id%>" name="figure[landmark_ids][]" value="<%= l.id%>" <%='checked' if @figure.landmarks.include?(l) %>><br> 
  <%end%>

  <h2>Create New Landmark:</h2>
  <label for="landmark_name">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label for="landmark_year">Year:</label>
  <input type="text" id="landmark_year" name="landmark[year]">

  <input type="submit" value="Edit Figure">