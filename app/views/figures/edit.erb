<h2>Edit Historical Figure</h2>

<form method="post" action="/figures/<%=@figure.id%>">
<input type="hidden" name="_method" value="patch">
<table>
  <tr>
    <th>Name</th>
  </tr>
  <tr>
    <td><input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"</td>
  </tr>
<table>
 <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
<%end%>
<input type="text" id="new_title" name="title[name]">
  <% Landmark.all.each do |landmark| %>
  <%= landmark.name %><input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
 <input type="text" id="new_landmark" name="landmark[name]">
<input type="submit" value="Edit Figure">
 </form>

<a class="button" href="/figures/<%= @figure.id %>/edit">Edit figure</a>
<a class="button" href="/figures">Figures</a>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
