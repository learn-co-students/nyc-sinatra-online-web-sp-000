<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <h3><label for="figure_name">Figure Name</label></h3>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <h3>Select Any Title(s)</h3>
  <% @titles.each do |title| %>
    <label for="<%= title.id %>"><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.title_ids.include?(title.id) %>>
  <% end %> 

  <h3>Or Create a New Title</h3>
  <input type="text" name="title[name]" id="new_title">

  <h3>Select Any Historical Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id) %>>
    <label for="<%= landmark.id %>"><%= landmark.name %></label>
  <% end %>

  <h3>Or Create a New Landmark</h3>
    <label for="landmark_name">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="landmark_year_completed">Year Completed: </label>
    <input type="number" name="landmark[year_completed]" id="landmark_year_completed">
    <br>

  <input type="submit" value="Edit Figure" id="submit">
</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
