<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>

  <label for="figure_title_ids">Title</label>
    <input type="text" name="figure[title_ids][]" id="figure_title_ids"><br>

  <label for="new_landmark">Landmark</label>
    <input type="text" name="figure[landmark_ids][]" id="new_landmark">
    <br>


  <input type="submit" value="Edit Figure">

</form>
