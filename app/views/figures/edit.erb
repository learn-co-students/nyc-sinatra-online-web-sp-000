<h2>Update A Figure</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input id="figure_name" type="text" name="figure[name]" value=<%=@figure.name%> >

  <label>Titles:</label><br>
  <% @titles.each do |title| %>
   <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
 <% end %>

  <h3>Create New Title:</h3>

  Name: <input type="text" name="title[name]" id="new_title">


  <label>Landmarks:</label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
  <% end %>

  <h3>Create New Landmark:</h3>

  Name: <input type="text" name="landmark[name]" id="new_landmark">
  Year: <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
