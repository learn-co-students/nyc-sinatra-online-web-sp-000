<h1>Edit Figure</h1>
  <br>
  <form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <br>
    <label>Figure Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
    <br>
    <br>
      <label>Figure Title</label>
      <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.name%>" <%='checked' if @figure.titles.include?(title) %>>
      <% end %>
      <br>
      <br>
      <% Landmark.all.each do |landmark| %>
      <label for="landmark_name"><%=landmark.name%></label>
      <br>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark) %>>
      <% end %>
      <label>Figure Landmarks</label>
      <input type="text" name="landmark[name]" id="new_landmark">
      <input type="submit" name="Edit Figure">

  </form>
