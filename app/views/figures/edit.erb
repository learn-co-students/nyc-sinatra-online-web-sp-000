<h1>Edit Figure: <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    
    <h2><label for="figure_name">Figure Name:</label></h2>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <h2><label for="figure_titles">Figure Titles:</label></h2>

    <% Title.all.each do |title| %>
        <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
    <% end %>

    <h3><label for="title_name">Add a New Title:</label></h3>
    <input type="text" name="title[name]" id="new_title" placeholder="Enter new title here">

    <h2><label for="figure_landmarks">Figure Landmarks:</label></h2>

    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
    <% end %>

    <h3><label for="landmark_name">Add a New Landmark:</label></h3>
    <input type="text" name="landmark[name]" id="new_landmark" placeholder="Enter new landmark here">

    <br><br>

    <input type="submit" value="Edit Figure">

</form>