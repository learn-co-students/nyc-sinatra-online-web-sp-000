<h1>Edit Figure <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method=POST>
  <input type="hidden" id="hidden" name="_method" value="patch"/>
  <label for="figure_name">Name: </label><br>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"/>
  <br>
  <p>Titles:</p>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"<%='checked' if @figure.titles.include?(title)%>><%= title.name %></input>
  <% end %>
  <br>
  <p>Landmarks:</p>
  <% @landmarks.each do |mark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= mark.id %>" id="landmark_<%= mark.id %>" <%= 'checked' if @figure.landmarks.include?(mark) %>><%= mark.name %></input>
  <% end %>
  <br>
  <br>
  <label for="new_title">New Title:</label>
  <input type="text" name="title[name]" id="new_title"/><br>
  <label for="new_landmark">New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"/><br>
  <br>
  <input type="submit" value="Edit Figure" id="Edit Figure"/>
</form>
