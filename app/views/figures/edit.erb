<h1>Edit <%= @figure.name %></h1>
<form method="post" action="/figures/<%=@figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Edit Figure Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  
  
  <label>Edit Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark" value="landmark[name]">
  
  <label>Edit Title</label>
  <input type="text" name="figure[title_ids][]" id="title_id">
  
  <input type="submit" value="Edit Figure">
</form>