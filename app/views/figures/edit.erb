<h2>Edit Historical Figure</h2>

<form action='/figures' method='POST'>
  <input type='hidden' id='hidden' name='_method' value="PATCH">

  <label>Name:</label>
    <input type='hidden' id='hidden' name='id' value='<%= @figure.id %>'>
    <input type='text' id='figure_name' name='figure[name]' value="<%= @figure.name %>"><br>
  <br>
  <label>Edit Titles:</label><br>
    <% Title.all.each do |title| %>
      <% checkmark = "\<\%\= checked \%\>" if @figure.titles.include?(title) %>
      <input <% checkmark %> type='checkbox' id='title_<%= title.id %>' name='figure[title_ids][]' value='<%= title.id %>'> <%= title.name %></input><br>
    <% end %>
  <br>
  <label>Create New Title: </label>
    <input type='text' name='title[name]' id='new_title'><br>
  <br>
  <label>Edit Landmarks: </label><br>
    <% Landmark.all.each do |landmark| %>
      <input type='checkbox' id='landmark_<%= landmark.id %>' name='figure[landmark_ids][]' value='<%= landmark.id %>'> <%= landmark.name %></input><br>
    <% end %>
  <br>
  <label>Create New Landmark: </label>
    <input type='text' name='landmark[name]' id='new_landmark'>
  <label>Year: </label>
    <input type='text' name='landmark[year_completed]' id='year_completed'><br>
  <br>
  <input type='submit' value="Edit Figure">
</form>
<br>
<br>
<a class="button" href="/figure">Figures</a>
