<h3>Edit Figure</h3>

<form action="/figures/<%=@figure.id %>" method="post">
	<input type="hidden" id="hidden" name="_method" value="patch">

		<label for="figure_name">Name</label>
		<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
			
	
		<h3>Titles</h3>
		<% Title.all.each do |title| %>
			<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"<%= 'checked' if @figure.titles.find{|t| t.id == title.id} %>><%= title.name %><br>
		<% end %>
		

		<h3>Create New Title</h3>
		<input type="text" name="title[name]" id ="figure_title"><br>
		
		<h3>Landmarks</h3>
		<% Landmark.all.each do |landmark| %>
		<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"<%= 'checked' if @figure.landmarks.find{|l| l.id == landmark.id} %>><%= landmark.name %><br>
		<% end %>

		<h3>Create New Landmark:</h3>
		<label for="new_landmark">Name</label>
		<input type="text" name="landmark[name]" id ="new_landmark">
		<label for="year_completed">Year</label>
		<input type="text" name="landmark[year_completed]" id ="year_completed">
		<br>


	<input type="submit" value="Edit Figure">

</form>