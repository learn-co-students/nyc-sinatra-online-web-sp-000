<h1>Edit: <%= @figure.name %></h1>
<form method="POST" action="/figures/<%= @figure.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="text" name="figure[name]" id="figure_name" placeholder="Figure Name"><br>

    <h2>Titles:</h2>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %>
    <% end %>

    <h2>Landmarks:</h2>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
    <% end %>
    
    <input type="text" name="title[name]"  id="new_title" placeholder="Title Name"><br>
    <input type="text" name="landmark[name]" id="new_landmark" placeholder="Landmark Name"><br>
    <input type="submit" value="Edit Figure">
</form>