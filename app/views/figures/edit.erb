<h1>Edit <%= @figure.name %> </h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch"/>
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"/><br>
  <label>Titles: </label>
  <em>Choose an Existing title</em>
  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>" id="title_<%= t.id %>" <%='checked' if @figure.titles.include?(t) %>/>
    <%= t.name %>
  <br>
  <% end %>
  <br>
  <label>Create a New Title</label>
  <input type="text" name="title[name]" id="new_title"/>
  <br>
  <label>Landmarks:</label>
  <% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>" id="landmark_<%= l.id %>" <%='checked' if @figure.landmarks.include?(l) %>/>
    <%= l.name %>
    <br>
  <% end %>
  <label>Or create a New Landmark </label>
  <input type="text" name="landmark[name]" id="new_landmark"/>
  <br>
  <button type="submit">Edit Figure</button>
</form>
