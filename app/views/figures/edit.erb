<h1> Welcome to Edit Page </h1>
<a class="button" href="/">Home</a>
&nbsp
<a class="button" href="/figures/<%= @figure.id %>/edit">Edit</a>
&nbsp
<a class="button" href="/figures">Figures</a>

<br><br>
<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label><b>Name:</b></label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br><br>

    <label><b>Edit Landmarks:</b></label><br>
        <% @landmarks.each do |landmark| %>
            <label><%= landmark.name %></label>
            <input type="checkbox" name="figure[landmark_ids] []" id="<%= landmark.name %>" value="<%= landmark.id%>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
    <% end %>

    <br><br>
    <label><b>Add New Landmark:</b></label>
    <input type="text" name="landmark[name]" id="new_landmark">

    <br><br>
    <label><b>Edit Titles:</b></label><br>
        <% @titles.each do |title| %>
            <label><%= title.name %></label>
            <input type="checkbox" name="figure[title_ids] []" id="<%= title.name %>" value="<%= title.id%>" <%= 'checked' if @figure.titles.include?(title) %>>
        <% end %>

     <br><br>   
    <label><b>Add New Title:</b></label>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <input type="submit" value="Edit Figure">

</form>