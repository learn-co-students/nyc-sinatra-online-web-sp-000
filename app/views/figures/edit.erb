<h1>Edit Figure: </h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <h3>Title: </h3>
  <% Title.all.each do |title| %>
    <p>
      <input
        type="checkbox"
        name="figure[title_ids][]"
        id="title_<%= title.id %>"
        value="<%= title.id %>"
        <%='checked' if @figure.titles.include?(title) %>
      >
      <label for="title_<%= title.id %>"><%= title.name %></label>
    </p>
  <% end %>

  <h4>Create a new title:</h4>
  <p><input type="text" name="title[name]" id="new_title"></p>

  <h3>Landmark: </h3>
  <% Landmark.all.each do |landmark| %>
    <p>
      <input
        type="checkbox"
        name="figure[landmark_ids][]"
        id="landmark_<%= landmark.id %>"
        value="<%= landmark.id %>"
        <%= 'checked' if @figure.landmarks.include?(landmark) %>
      >
      <label for="landmark_<%= landmark.id %>" ><%= landmark.name %></label>
    </p>
  <% end %>

  <h4>Create a new landmark:</h4>
  <p>
    <label for="new_landmark">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
  </p>
  <p>
    <label for="landmark[year_completed]">Year Completed: </label>
    <input type="text" name="landmark[year_completed]" id="landmark[year_completed]">
  </p>




  <input type="submit" value="Edit Figure">
</form>
