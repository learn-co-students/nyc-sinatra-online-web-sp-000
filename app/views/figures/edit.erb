<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id %>" method="POST">
	<input type="hidden" id="hidden" name="_method" value="PATCH">
	<h2>Current Name: <%= @figure.name %></h2>
	<h3>Current titles:</h3>
		<% @figure.titles.each do |title| %>
			<span><%= title.name %>   </span>
	<% end %>
	<br>

	<h3>Current landmarks:</h3>
		<% @figure.landmarks.each do |landmark| %>
			<span><%= landmark.name %>   </span>
	<% end %>
	<br>

	<p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

	<p>Titles:</p>
	<% @titles.each do |title| %>
		<input type="checkbox" <%= "checked" if @figure.titles.include?(title) %> name="figure[title_ids][]" id="<%= "title_#{title.id}" %>" value="<%= title.id %>"><%= title.name %> <br>
	<% end %>
	<p>New Title: <input type="text" name="title[name]" id="new_title"></p>

	<p>Landmarks:</p>
	<% @landmarks.each do |landmark| %>
		<input type="checkbox" <%= "checked" if @figure.titles.include?(landmark) %> name="figure[landmark_ids][]" id="<%= "landmark_#{landmark.id}" %>" value="<%= landmark.id %>"><%= landmark.name %> <br>
	<% end %>
	<p>New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>

	<input type="submit" value="Edit Figure">
</form>