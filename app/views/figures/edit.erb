<h2>Edit Historical Figure</h2>

<!-- add content here -->
<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <p>Name: <input id='figure_name' type="text" name="figure[name]" value="<%= @figure.name %>"></p>

  <h3>Titles</h3>
  <% @titles.each do |title|%>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name%></input><br>
  <% end %>
  <p>Create New Title: <input id="new_title" type="text" name="title[name]" value=""></p>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark|%>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input><br>
  <% end %>
  <p>Create New landmark</p>
  <p>Name: <input id='new_landmark' type="text" name="landmark[name]" value=""> Year: <input type="text" name="landmark[year_completed]" value=""></p>

  <input type="submit" name="" value="Edit Figure">
</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
