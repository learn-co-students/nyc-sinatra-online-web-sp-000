<h1> Edit <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

  <label><h2>Titles</h2></label>
  <% @titles.each do |title| %>
      <label><%=title.name%></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><br>
  <% end %>

  <label><h2>Create New Title:</h2></label>
  <input type="text" id="new_title" name="title[name]">

  <label><h2>Landmarks</h2></label>
  <% @landmarks.each do |landmark| %>
    <label><%=landmark.name%></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><br>
  <% end %>

  <label><h2>Create New Landmark:</h2></label>
  <label for="landmark_name">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label for="year">Year:</label>
  <input type="text" id="year" name="landmark[year_completed]">

  <input type="submit" value="Edit Figure">
</form>
