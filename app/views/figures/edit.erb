
<h1>EDIT Stuff</h1>
<form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" id="hidden" name ="_method" value="PATCH">
    <label>FIGURE NAME</label>
        <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br><br>
    <label>Title</label>
        <%@titles.each do |title|%>
        <li><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>><%=title.name%></li>
        <%end%><br>
    <em> Create a New Title:</em><br><br>
        <label>Title:</label><input type="text" name="title[name]" id="new_title"><br><br>
    <label>LANDMARKS</label>
        <%@landmarks.each do |landmark|%>
        <li><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%="checked" if @figure.landmarks.include?(landmark)%>><%=landmark.name%></li>
        <%end%><br>
    <em>Create a New Landmark:</em><br><br>
        <label>Landmark:</label><input type="text" name="landmark[name]" id="new_landmark"><br><br>
    <input type="submit" value="Edit Figure">
</form>
