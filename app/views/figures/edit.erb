<h2>Update A Figure</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input id="figure_name" type="text" name="figure[name]" value=<%=@figure.name%> >
  <br>
  <br>

  <label>Titles:</label><br>
  <% @titles.each do |title| %>
  <label><%= title.name %></label>
   <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
 <% end %>
  <br>
  <br>
  <label>Create New Title:</label>
  <br>

  <input id="new_title" type="text" name="title[name]"></input>
  <br>
  <br>


  <label>Landmarks:</label><br>
  <% @landmarks.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
<% end %>
  <br><br>
  <label>Create New Landmark:</label>
  <br>

  Name: <input id="new_landmark" type="text" name="landmark[name]"></input>
  Year: <input id="new_landmark_year_completed" type="text" name="landmark[year_completed]"></input>
  <br>
  <br>

  <input type="submit" value="Edit Figure">
</form>
<br>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
