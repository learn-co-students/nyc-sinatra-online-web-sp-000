<h2>Create New Figure</h2>

<!-- add content here -->
<form action="/figures/<%=@figure.id%>" method="post">
    Name: <input type="text" name="figure[name]" id="figure_name" placeholder="<%=@figure.name%>"><br>

    Titles:<br> 
    <%@titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"> <%=title.name%>
    <%end%><br>
    
    <label for="new_title">New Title:</label><br>
    <input type="text" name="title[name]" id="new_title">
    <br><br>
    Landmarks:<br> 
    <%@landmarks.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"> <%=landmark.name%>
    <%end%><br>

    <label for="new_landmark">New Landmark:</label><br>
    <input type="text" name="landmark[name]" id="new_landmark">

    
<%#binding.pry %>
    
    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="Edit Figure">
</form>

