<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Name:</h2>
  <input type="text" value="<%= @figure.name %>" id="figure_name" name="figure[name]">

  <h2>Edit Title</h2>
  <h3><% Title.all.each do |t| %></h3>
    <label><%= t.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>" <%='checked' if @figure.titles.include?(t) %> >
    <br>
  <% end %>

  <h2>Create New Title</h2>
  <input type="text" name="title[name]" id="new_title" >

  <h2>Edit Landmarks</h2>
  <h3><% Landmark.all.each do |l| %></h3>
    <label><%= l.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>" <%='checked' if @figure.landmarks.include?(l) %>>
    <br>
  <% end %>

  <h2>Create New Landmarks</h2>
  <label>Name:<input type="text" id="new_landmark" name="landmark[name]"></label>
  <label>Year:<input type="text" name="landmark[year_completed]"></label>
  <input type="submit" value="Edit Figure">

</form>