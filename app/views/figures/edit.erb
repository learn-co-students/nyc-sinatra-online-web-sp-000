<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label>Name:</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>">
    <br><br>
    <label>Edit Titles:</label>
    <br>
    <% Title.all.each do |title| %>
        <label> <%= title.name %> </label>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%> ><br>
    <% end %>
    <br>
    <label>New title:</label>
    <input type="text" name="title[name]" id="new_title"></input>
    <br><br>
    <label>Edit Landmarks:</label>
    <br>
    <% Landmark.all.each do |landmark| %>
        <label> <%= landmark.name %> </label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%> ><br>
    <% end %>
    <br>
    <label>Create New Landmark:</label>
    <label>Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]">
    <br><br>
    <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
