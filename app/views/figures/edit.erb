<h1> Edit: <%= @figure.name %></h1>
<form method="POST" action="/figures/<%= @figure.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
  <label><strong>Name:</strong></label><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>

    <label><strong>Title(s):</strong></label><br>
    Choose from an existing title:<br>
        <% @titles.each do |title| %>
            <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
            <%= title.name %>
            <br>
        <% end %>
    <label><strong>Create New Title:</strong></label><br><br>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <label><strong>Landmarks:</strong></label><br>
    <em>Choose from an existing Landmark</em><br>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <%= landmark.name %>
        <br>
    <% end %>
    <br>
    <em>and/or Create a New Landmark:</em><br><br>
    <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark"><label>Year:</label><input type="text" name="landmark[year]">
    <br><br>

    <input type="submit" value="Edit Figure">


</form>