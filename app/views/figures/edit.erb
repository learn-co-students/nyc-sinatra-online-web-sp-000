<h2>Edit a Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name: </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
    <h3>Titles </h3>
    <% @titles.each do |title| %>
        <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
        <label for="title_<%=title.id%>"><%= title.name %>: </label><br>
    <% end %>
    <label for="new_title">Create New Title </label>
    <input type="text" name="title[name]" id="new_title">
    <h3>Landmarks </h3>
    <% @landmarks.each do |landmark| %>
        <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <label for="landmark_<%=landmark.id%>"><%= landmark.name %>: </label><br>
    <% end %>
    <label for="new_landmark">Create New Landmark </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <input type="submit" value="Edit Figure">
</form>