<h1>Edit Figure</h1>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="patch">
  <p>Name <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></p>
  <p><strong>Titles</strong></p>
  <%Title.all.each do |title|%>
    <%=title.name%><input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><br>
  <%end%>
  <p><strong>Create New Title:</strong></p>
  <p><input type="text" id="new_title" name="title[name]"></p>
  <p><strong>Landmarks</strong></p>
  <%Landmark.all.each do |landmark|%>
    <%=landmark.name%><input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><br>
  <%end%>
  <p><strong>Create New Landmark:</strong></p>
  <p>Name: <input type="text" id="new_landmark" name="landmark[name]">
  Year: <input type="text" name="landmark[year]"></p>
  <p><input type="submit" value="Edit Figure"></p>
</form>