<h1>Edit Historical Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br>

  <label>Titles:</label><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>/><br>
    <%= title.name %><br>
  <%end%>
  <br>

  <label>Create a Title:</label><br>
  <input type="text" name="title[name]" id="new_title"><br><br>

  <label>Landmarks:</label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>/>
    <%= landmark.name %><br>
  <%end%>
  <br>
  
  <label>Create a Landmark:</label><br>
  <input type="text" name="landmark[name]" id="new_landmark"><br><br>

  <input type="hidden" name="_method" value="patch">
  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>