<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
 
  <h2>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></h2>
  <br>
  <h2>Titles</h2>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><br>
  <% end %>
  <h3>Add New <input type="text" id="new_title" name="title[name]"></h3>
  <br>
  
  <h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><br>
  <% end %>
  <h3>Add New <input type="text" id="new_landmark" name="landmark[name]"></h3>
  <br>
 
  <input type="submit" value="Edit Figure">
</form>
