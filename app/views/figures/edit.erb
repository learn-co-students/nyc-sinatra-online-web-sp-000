<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch"/>

    <label>Name: </label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"/><br><br>

    <label>Edit Landmarks:</label><br>
    <% @landmarks.each do |landmark|%>
        <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <label><%= landmark.name%></label>
    <%end%>
    <br><br>
    <label>Add New Landmark: </label>
    <input type="text" id="new_landmark" name="landmark[name]"/>
    
    <br><br>
    <label>Edit Titles:</label><br>
    <% @titles.each do |title|%>
        <input type="checkbox" id="<%= title.name%>" name="figure[title_ids][]" value="<%= title.id%>" <%='checked' if @figure.titles.include?(title)%>>
        <%=title.name%>
    <%end%>

    <br><br>
    <label>Add New Title: </label>
    <input type="text" id="new_title" name="title[name]"/>
    
    <br><br>
    <input type="submit" value="Edit Figure"/>
</form>