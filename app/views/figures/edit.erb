<h1>Edit <%= @figure.name%></h1>
 
<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>


  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <label for="title_<%=title.id%>"><%=title.name%> </label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><br>
  <% end %>
  <br>
  
  <h3>Create New Title</h3>
  <label for="new_title">Title Name: </label>
  <input type="text" name="title[name]" id="new_title"><br>
  <br><br>
 
  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <label for="landmark_<%=landmark.id%>"><%=landmark.name%> </label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><br>
  <% end %>
  <br>
  
  <label for="new_landmark">Landmark Name:  </label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <label for="new_landmark_year">Landmark Year:  </label>
  <input type="text" name="landmark[year]" id="new_landmark_year"><br>
  
 <br><br>
 
 
  <input type="submit" value="Edit Figure">
</form>