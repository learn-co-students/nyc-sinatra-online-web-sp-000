<h2>Edit Historical Figure</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>
    <h3>Name: <%=@figure.name%></h3>
    <label>New Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
  </p>

  <p>
    <h3>Titles:</h3>
  </p>
  <p>
      <%@titles.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"<%='checked' if @figure.titles.include?(title)%>>
            <%=title.name%></input>
      <br>
      <%end%>
  </p>
  <p>
    <h3>Create New Title</h3>
    <label>New Title Name:</label>
    <input type="text" name="title[name]" id="new_title">
  </p>
  <p>
    <h3>Landmarks:</h3>
  </p>
  <p>
      <%@landmarks.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>>
            <%=landmark.name%></input>
      <br>
      <%end%>
  </p>
  <p>
    <h3>Create New Landmark</h3>
    <label>New Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
  <br>
    <label>New Landmark Year Completed:</label>
    <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed">
  </p>
  <p>
      <input type="submit" value="Edit Figure">
  </p>
  </form>

</form>
