<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br>

  <h3>Landmarks:</h3>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>

  <label for="new_landmark">New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <h3>Titles:</h3>

  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
    <label for="landmark_<%= title.id %>"><%= title.name %><br>
  <% end %>  

  <label for="new_title">New Title:</label>
  <input type="text" name="title[name]" id="new_title">

  <input type="submit" value="Edit Figure">

</form>