<form method="POST" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Edit the Figure's Name:</label>
<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
<br>
<p> Titles </p>
<% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids]" id="<%=t.id%>" value="<%= t.id %>"><%= t.name %><br>
    <% end %>

    <p>New landmark:<p>
    <input type="text" name="new_landmark"  >
    <input type="submit" value="Edit Figure">
    
<form>