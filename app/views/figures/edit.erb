<h2>Edit Historical Figure</h2>



<form action="/figures/<%= @figure.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

<label for="figure_name">Name</label>
    <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

<h3>Titles</h3>
<% @titles.each do |title| %>
    <label for=" <%= title.id%>"> <%=title.name%> </label>
        <input type="checkbox" name="figure[title_ids][]" <%='checked' if @figure.titles.include?(title) %>   id="title_<%=title.id%>" value="<%= title.id%>">
<% end %>

<h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title"> </input>


<h3>Landmarks</h3>
<% @landmarks.each do |landmark| %>
    <label for="<%= landmark.id%>"> <%=landmark.name%> </label>
        <input type="checkbox" <%='checked' if @figure.landmarks.include?(landmark) %>  name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id%>">
<% end %>

<h3> Create New Landmark: </h3>
    <input type="text" name="landmark[name]" id="new_landmark"></input>


<br>
<input type="submit" value="Save Edits to Figure" id="Edit Figure">

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>

<a class="button" href="/landmarks">Landmarks</a>
