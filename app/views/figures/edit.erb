<h2>Edit Historical Figures</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for= "figure_name">Name</label>

  <br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br>

  <label><h4>Landmarks</h4></label>
  <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
      <label for="<%= landmark.id %>"> <%= landmark.name %> </label><br>
    <% end %>
  <br>
  <label for="new_landmark">Add New Landmark:</label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>

  <label><h4>Titles</h4></label>
  <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
      <label for="<%= title.id %>"> <%= title.name %> </label><br>
    <% end %>
  <br>
  <label for="new_title">Add New Title:</label>
  <br>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
