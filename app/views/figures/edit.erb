<h1>Edit <%= @figure.name %></h1>

<form action='/figures/<%= @figure.id %>' method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label>Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>"><br></br>
  
    <label> Change Title: </label><br>
    <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
        <%end%><br>
    <label> Or Create a New Title: </label>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <label> Choose a Landmark: </label><br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %> </label>
        <input type="checkbox" id="<%=landmark.name%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%='checked' if @figure.landmarks.include?(landmark) %><br>
        <%end%>
    <label> Or Create a New Landmark: </label>
    <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br><br>


    <input type="submit" name="Edit Figure" >
</form>