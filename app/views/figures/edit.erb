<form action ="/figures/<%=@figure.id%>" method ="post">
  <input type ="hidden" id ="hidden" name ="_method" value ="patch">

  Name: <input type ="text" name ="figure[name]" id ="figure_name" value ="<%=@figure.name%>"><br><br>

  Check Title(s):
  <% @titles.each do |title| %>
  <br><input type ="checkbox" <%= 'checked' if @titles.include?(title)%> name ="figure[title_ids]" value ="<%=title.name%>" id ="title_<%=title.id.to_i%>"><%=title.name%><br>
  <%end%>
  <br>

  Create Title: <input type ="text" name ="figure[title_ids]" id ="new_title"><br><br>

  Check Landmark(s):
  <% @landmarks.each do |landmark| %>
  <br><input type ="checkbox" <%= 'checked' if @landmarks.include?(landmark)%> name ="figure[landmark_ids]" value ="<%=landmark.name%>" id ="landmark_<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>
  <br>

  Create Landmark: <br>
  Name: <input type ="text" name ="landmark[name]" id ="new_landmark">
  Year Completed: <input type ="integer" name ="landmark[year_completed]" id ="new_landmark_year_completed"><br><br>
  <input type ="submit" value = "Edit Figure">
</form>
