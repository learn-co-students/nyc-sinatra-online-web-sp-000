<h2>Edit Figure</h2>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure[name]">Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

  <h2>Titles</h2>

  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    </br>
  <% end %>

  <h2>Create New Title</h2>
  <label for="title_name">Name</label>
  <input type="text" id="new_title" name="title[name]" >
  </br>
  </br>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
    </br>
  <% end %>

  <h2>Create New Landmark</h2>
  <label for="new_landmark">Name</label>
  <input type="text" id="new_landmark" name="landmark[name]" >
  </br>
  <label for="new_landmark_year_create">Year Created</label>
  <input type="text" id="landmark_year_created" name="landmark[year_created]" >
  </br>
  </br>

  <input type="submit" id="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
