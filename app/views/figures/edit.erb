<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="figure_name">Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    <br>

    <h2>Titles</h2>
    <% Title.all.each do |t| %>
        <label><%= t.name %></label>
        <input type="checkbox" id="title_<%= t.id %>" name="figure[title_ids][]" value="<%= t.id %>">
        <br>
    <% end %>

    <h2>Create New Title:</h2>
    <input type="text" name="title[name]" id="new_title">
    
    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
        <br>
    <% end %>
    
    <h2>Create New Landmark</h2>
    <label for="landmark[name]">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="landmark[year_completed]">Year: </label>
    <input type="text" name="landmark[year_completed]">
    
    <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
