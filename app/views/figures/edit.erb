<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">Figure Name</label><br>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
  <% end %>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" name="figure[landmark_ids][]" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
  <% end %>
  <input type="text" name="title[name]" id="new_title">Alternative Title Name</label><br>
  <input type="text" name="landmark[name]" id="new_landmark">Alternative Landmerk Name</label><br><br>
  <input type="submit" id="Edit Figure" value="Edit Figure">
</form>
