<h2>Edit Historical Figure</h2>

<form action='/figures/<%= @figure.slug %>' method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

    <h2>Titles</h2>
    <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><br>
    <%end%><br>

    <h2>Create New Title:</h2>

    <input type="text" name="title[name]">

    <h2>Landmarks</h2>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><br>
    <%end%><br>

    <h2>Create New Landmark:</h2>

    <label for="landmark_name">Name:</label>
    <input id="landmark_name" type="text" name="landmark[name]">
    <label for="landmark_date">Date:</label>
    <input id="landmark_date" type="text" name="landmark[year_completed]">
    <br><br>

    <input type="submit" value="Update">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>