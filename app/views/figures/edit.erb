<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  
  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name%>"></br></br>

  <% @titles.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%= "checked" if @figure.title_ids.include?(title.id)%>> <%= title.name %></br>
  <% end %>
  </br>

  <label for="new_landmark">Famous Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></br>

  <button type="submit" id="submit">Edit Figure</button>
</form>