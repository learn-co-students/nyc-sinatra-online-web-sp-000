<h1>Edit <%=@figure.name%></h1>


<form method="POST" action="/figures/<%=@figure.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label> Edit the Figure's Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
    
    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
    <% end %>
    <br>
    
    <h3>Add a new landmark:</h3>
    Name: <input type="text" name="landmark[name]" id="new_landmark">
    Year Completed: <input type="text" name="landmark[year]" id="new_landmark_year">

    <h3>Existing Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
    <% end %>

    <h3>Add a new title:</h3>
    Name:<input type="text" name="title[name]" id="new_title"><br>
    
    <input type="submit" value="Edit Figure">
</form>