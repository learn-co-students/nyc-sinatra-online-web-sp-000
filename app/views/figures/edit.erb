<form action = "figures/<%=@figure.id%>" method ="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Edit Name:</label>
<input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>"></input>
<br><br>
<label>Edit Landmarks:</label>
<%Landmark.all.each do |landmark| %>
    <label><%=landmark.name %></label>
    <input type="checkbox" id="<%=landmark.name%>" name="figure[landmark_ids][]" value="<%= landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark) %>></input>
    <% end %>
    <br>
<label>New Landmark:</label>
<label>Name:</label>
<input type="text" id="new_landmark" name="landmark[name]"></input>
<label>Year Completed:</label>
<input type="text" name="landmark[year_completed]"></input>
<br><br>
<label>Edit Titles</label>
<% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>"<%='checked' if @figure.titles.include?(title)%>></input>
    <% end %>
    <br>
<label>New Title:</label>
<input type="text" id="new_title" name="title[name]"></input><br><br>
<input type="submit" value="Edit Figure">
</form>