<h2>Edit a Figure</h2>

<form method=POST action="/figures/<%= @figure.id %>">
<input type="hidden" id="hidden" name="_method" value="PATCH">
<p><strong>Name:</strong> 
<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>

<p><strong>Titles:</strong><br>
<% @titles.each do |title| %>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="title_<%= title.id %>"> <%= title.name %>
<% end %>
</p>

<p><strong>New Title:</strong>
<input type="text" name="title[name]" id="new_title">
</p>

<p><strong>Landmarks:</strong><br>
<% @landmarks.each do |landmark| %>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="landmark_<%= landmark.id %>"> <%= landmark.name %>
<% end %>
</p>

<p><strong>New Landmark:</strong>
<input type="text" name="landmark[name]" id="new_landmark"> <strong> Year:</strong> <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
</p>

<input type="submit" value="Edit Figure">
</form>