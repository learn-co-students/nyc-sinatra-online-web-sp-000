

<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="patch" id="hidden">
  
  <lobel for="name">Name:</lobel><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
  
  <label for="title">Titles</label><br>
  <% @titles.each do |title| %>
  <%= title.name %> <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>
  <br>
  Create New Title:
  <input type="text" name="title[name]" id="new_title"> <br>
  
  
  <label for="title">Landmarks</label><br>
  <% @landmarks.each do |landmark| %>
  <%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
  <br>
  Create New Landmark:
  <input type="text" name="landmark[name]" id="new_landmark"> <br>
  
  <input type="submit" value="Edit Figure">
  
</form>