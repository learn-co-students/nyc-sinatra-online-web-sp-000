<h1>Edit figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label><b>Name:</b></label>
  <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>"></p>
<br>
  <h3><label>Titles</label></h3>
    <%@titles.each do |title|%>
      <p><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%></p>
    <%end%>

  <p><label><b>Create New Title:</b></label>
  <input id="new_title" type="text" name="title[name]"></p>
  <br>

  <h3><label>Landmarks</label></h3>
  <%@landmarks.each do |landmark|%>
    <p><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%></p>
  <%end%>

  <p><label><b>Create New Landmark:</b></label></p>
  <p>Name: <input id="new_landmark" type="text" name="landmark[name]">
  Year: <input type="number" name="year[number]"></p>

  <input type="submit" value="Edit Figure">
</form>
