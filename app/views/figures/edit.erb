<h2>Edit Historical Figure</h2>

<form method="POST" action="/figures/<%= @figure.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>

    <p><h3>Other Titles</h3>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input>
    <% end %></p>

    <p><h3>Enter New Title(optional)</h3></p>
    <p><input type="text" name="title[name]" id="new_title"></p>

    <p><h3>Landmarks</h3></p>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><%= landmark.name %></input>
    <% end %></p>

    <p><h3>Create New Landmark (optional)</p></h3>
    <p>Name: <input type="text" name="landmark[name]" id="new_landmark">
    Year: <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></p>


    <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>

 