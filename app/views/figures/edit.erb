<h2>Edit Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method"  id="hidden" value="patch">

  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br>
  <br>

  <h4>Titles</h4>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= @figure.titles.include?(title) ? "checked" : "" %>><%= title.name %>
    <br>
  <% end %>

  <h4>Create New Title:</h4>

  <input type="text" name="title[name]" id="new_title">

  <h4>Landmarks</h4>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= @figure.landmarks.include?(landmark) ? "checked" : "" %>><%= landmark.name %>
    <br>
  <% end %>

  <h4>Create New Landmark:</h4>

  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Edit Figure">
</form>

<br>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
