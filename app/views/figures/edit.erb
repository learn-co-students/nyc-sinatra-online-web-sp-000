<h3> Edit a Figure</h3>

<form action="/figures/<%=@figure.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name</label> <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

<br><br>

<label>Title(s)</label>
<input type="text" id="new_title" name="figure[title]">
<% @titles.each do |title| %>
    <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
    <%= title.name %>
    <br>
  <% end %>
  

  <label>Landmark(s)</label>
  <input type="text" id="new_landmark" name="figure[landmark]">
<% @landmarks.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <%= landmark.name %>
    <br>
  <% end %>

<input type="submit" value="Edit Figure">

</form>