<head>
    <title>edit figure</title>
  </head>

  <body>
    <h1>Edit This Figure</h1>
 
    <form action='/figures/<%= @figure.id %>' method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
        <ul>    
            <li><h3>Figure Name: <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"></h3></li>
            <li><h3>Figure Titles:</h3></li>
            <ul>
                <% @titles.each do |title| %>
                    <li><h4><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input></h4></li>
                <% end %>
                <li><h3>Create New Title: <input type="text" name="title[name]" id="new_title"></h3></li>
            </ul>
            <li><h3>Figure Landmarks:</h3></li>
            <ul>
                <% @landmarks.each do |landmark| %>
                    <li><h4><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></h4></li>
                <% end %>
                <li><h3>Create New Landmark:</h3></li>
                <ul>
                    <li><h3>Landmark Name: <input type="text" name="landmark[name]" id="new_landmark"></h3></li>
                    <li><h3>Landmark Year: <input type="text" name="landmark[year]" id="new_landmark_year"></h3></li>
                </ul>
            </ul>    
            <input type="submit" value="Edit Figure" id="submit">
        </ul>
    </form>
  </body>
</html>