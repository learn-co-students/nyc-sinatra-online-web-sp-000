<h1>Update a Figure</h1>
<h2>Edits for <%= @figure.name %></h2>
<form action='/figures/<%= @figure.id %>' method='POST'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for='figure[name]'>Edit Figure Name:</label>
  <input type='text' name='figure[name]' id='figure_name'></p>
  
  <label>Title/s</label>
  <h3>Choose from existing titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <%= title.name %>
    <br>
  <% end %><br>
  
  <p><label for='title[name]'>Create Title:</label>
  <input type='text' name='title[name]' id='new_title'></p>
  
  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
  <input type='checkbox' name='figure[landmark_ids][]' id='landmark_<%= landmark.id%>' value='<%= landmark.id%>'><%= landmark.name%><br>
  <% end %>
  
  <p><label for='landmark[name]'>Create Landmark:</label>
  <input type='text' name='landmark[name]' id='new_landmark'></p>
  
  <input type='submit' value='Edit Figure' id='submit'>
</form>