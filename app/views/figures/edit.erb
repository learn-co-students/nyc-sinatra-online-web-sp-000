<form method='post' action='/figures/<%= @fig.id %>'>
	<input type="hidden" name='_method' value='patch'>

	<input type='text' name='figure[name]' value="<%= @fig.name %>" id='figure_name'>
	<% @titles.each do |t| %>
		<label for='<% t.id %>'> <% t.name %> </label>
		<input type='checkbox' name='figure[title_ids][]' value="<% t.id %>" id='<% t.id %>'>
	<% end %>
	<input type='text' name='landmark[name]' id='new_landmark'>

	<input type='submit' id="Edit Figure" value='Edit Figure'>
</form>