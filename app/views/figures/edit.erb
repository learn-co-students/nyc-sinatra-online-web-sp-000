<h1>Update Figure</h1>

<h2>Edits for <%= @figure.name %></h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Edit the Figures's Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value ="<%=@figure.name%>">
  <br>
  <br>
  <p>Select an existing title or create a new one below.</p>
  <%Title.all.each do |title|%>
    <br><input type="checkbox" id="<%=title.id%>" name="figure[title_ids][]" value="<%=title.id %>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%>
  <%end%>
  <br></br>

  <h3>New Title</h3>
  <label>Title Name: </label>
  <input type="text" id="Title Name" name="title[name]">
  <br></br>


  <p>Select an existing artist or create a new one below.</p>
  <h3>Existing Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
  <% end %>
  <br>

  <h3>New Landmark</h3>
  <label>Landmark Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br><br>

  Year Completed
  <br>Year: <input type="integer" id="new_year_completed" name="landmark[year_completed]">
  <br></br>

  <input type="submit" value="Edit Figure">
</form>
<a class="button" href="/landmarks">Landmarks</a>
