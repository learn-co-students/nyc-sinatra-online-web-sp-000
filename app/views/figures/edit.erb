<h2>Update <%= @figure.name %></h2>

<!-- add content here -->
<form action='/figures/<%= @figure.id %>' method='post'>
    <input id ="hidden" type="hidden" name="_method" value="patch"> 
    <label for "figure[name]">Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
    <label for "figure[title_ids][]">Titles: </label><br/>
    <% @titles.each do |title| %>
        <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %><br>
        
    <% end %>
    <br/>

    <label for "new_title">New Title: </label>
    <input type="text" id="new_title" name="title[name]">
    <br/>

    <% @landmarks.each do |landmark| %>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
        
    <% end %>
    <br/>

    <label for "new_landmark">New Landmark: </label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <br/>

    <input type='submit' value='Edit Figure'>
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>