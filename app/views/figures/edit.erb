<h2>Update Figure</h2>

<form method="POST" action="/figures/<%= @figure.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label for="figure_name">Figure Name</labe>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <h3>Titles</h3>

        <% Title.all.each do |title| %>
            <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
        <% end %>
    
    <h3>Create New Title:</h3>
    <label for="new_title">Title Name: </label>
    <input type="text" name="title[name]" id="new_title" value="<%= @figure.titles.name %>"><br>
    <br>
        <% Landmark.all.each do |landmark| %>
            <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
        <% end %>

    <h3>Create New Landmark:</h3>
    <label for="new_landmark">Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark" value="<%= @figure.landmarks.name %>">
  
    <input type="submit" id="submit" value="Edit Figure">

</form><br>
<br>
<a class="button" href="/figures">Figures</a>
