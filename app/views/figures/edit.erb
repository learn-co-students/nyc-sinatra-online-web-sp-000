<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label>Name</label>
    <br>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
    <br><br>

    <label>Title</label>
    <br>
    <% Title.all.each do |title| %>
        <label><%=title.name%></label>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%= 'checked' if @figure.titles.include?(title) %> id="<%= title.name %>">
    <% end %><br>
    <label>Add New Title</label>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <label>Landmark</label>
    <br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark) %> id="<%= landmark.name %>">
    <% end %><br><br>

    <label>Add New Landmark</label>
    <br>
    <input type="text" name="landmark[name]" id="new_landmark">
    <br><br>

    <Label>Year:</label>
    <br>
    <input type="text" name="landmark[year_completed]">

    <input type="submit" value="Edit Figure">
</form>