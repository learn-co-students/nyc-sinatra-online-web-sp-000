<h2>Edit Historical Figure</h2>

<!-- add content here -->
<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH"> 

<label for="figure_name">Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

<h3><label for="figure_titles">Titles</label></h3>
    <% @titles.each do |title| %> 
        <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %><br> 
    <% end %> 
    
<h3><label for="new_title">Create New Title:</label> 
    <input type="text" id="new_title" name="title[name]">

<h3><label for="figure_landmarks">Landmarks</label><br></h3>
    <% @landmarks.each do |landmark| %> 
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %><br> 
    <% end %><br> 

<h3><label for="new_landmark">Create New Landmark:</label></h3> 
<label for="new_landmark_name">Name:</label> 
    <input type="text" id="new_landmark" name="landmark[name]">
<label for="new_landmark_year">Year:</label>
    <input type="text" id="new_landmark_year" name="landmark[year]">

<input type="submit" value="Edit Figure"><br>
</form> 


<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>