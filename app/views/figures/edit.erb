<form action='/figures/<%= @figure.id %>' method='POST'>
<input id='hidden' type='hidden' name='_method' value='PATCH' >
<h2>Edit <%= @figure.name %>'s Information:</h2>
<p>Name: <input id='figure_name' type='text' name='figure[name]' value='<%= @figure.name %>'></p>
<h3>Titles:</h3>
<% @titles.each do |title| %>
<p><input type='checkbox' name='figure[title_ids][]' id=<%="title_#{title.id}"%> value=<%="title_#{title.id}"%> <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></p>
<% end %>
<h3>Create a New Title:</h3>
<p><input id='new_title' type='text' name='title[name]'></p>
<h3>Landmarks:</h3>
<% @landmarks.each do |landmark| %>
<p><input type='checkbox' name='figure[landmark_ids][]' id=<%="landmark_#{landmark.id}"%> value=<%="landmark_#{landmark.id}"%> <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></p>
<% end %>
<h3>Create a New Landmark:</h3>
<p>
Name: <input id='new_landmark' type='text' name='landmark[name]'>
Year: <input id='landmark_year' type='text' name='landmark[year]'>
<input id='Edit Figure' type='submit' name='Edit Figure' value='Edit Figure'>
</p>
</form>