<h2>All Historical Landmarks</h2>
<p>
    <a class="button" href="/figures">Figures</a>&nbsp;&nbsp;&nbsp;
    <a class="button" href="/">Home</a>
</p>
<hr>

<table>
    <tr>
        <th>Name</th>
        <th>Year Completed</th>
        <th>View Landmark</th>
    </tr>
        <% @landmarks.each do |lm| %>
        <tr>
            <td><%= lm.name %></td>
            <td><%= lm.year_completed %></td>
            <td><a href="/landmarks/<%= lm.id %>">More Info</a></td>
        </tr>    
        <% end %>
<table>
