<h2>Create New Landmark</h2>

<form action="/landmarks" method="POST">
  <label>Landmark Name:</label>
  <input id="landmark_name" type="text" name="landmark[name]">
  <br>
  <label>Year Completed:</label>
  <input id="landmark_year_completed" type="text" name="landmark[year_completed]">
  <br>  
  <h3>Select Figure:</h3>
  <% @figures.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" id="<%= figure.name %>" value="<%= figure.id %>"><%= figure.name %></input><br>
  <% end %>
  <br>
  
  <input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
