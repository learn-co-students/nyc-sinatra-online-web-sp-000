<h2>Create New Landmark</h2>

<form action="/landmarks" method="POST">

  <p>Create New Landmark</p>
  <label for="landmark[name]">Landmark Name</label>
  <input type="text" name="landmark[name]" id="landmark_name"><br>

  <label for="landmark[year]">Landmark Year</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"><br>

  <p>Landmarks</p>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name%><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %>

  <input type="submit" value="Create New Landmark">

</form>








<a class="button" href="/landmarks">Landmarks</a>
