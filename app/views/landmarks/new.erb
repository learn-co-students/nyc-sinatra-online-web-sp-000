<h2>Create New Landmark</h2>

<form action='/landmarks' method="POST">
    <label for="landmark_name">Name</label>
    <input type="text" id="landmark_name" name="landmark[name]">
    <label for="landmark_year_completed">Year Completed</label>
    <input type="text" id="landmark_year_completed" name="landmark[year_completed]">

    <h2>Figure</h2>
    <% Figure.all.each do |figure| %>
        <input id="<%= figure.name %>" type="radio" name="landmark[figure_id]" value="<%= figure.id %>">
        <label for="<%= figure.name %>"><%= figure.name %></label><br>
    <%end%><br>

    <h2>New Figure:</h2>

    <label for="new_figure">
    <input id="new_figure" type="text" name="figure[name]"><br>

    <input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
