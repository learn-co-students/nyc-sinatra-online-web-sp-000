<h2>Create New Landmark</h2>

<!-- add content here -->

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>

<form action='/landmarks' method="POST">
<label>Name:</label>
      <input  type="text" id = "landmark_name" name="landmark[name]"></input>
    <br>
<label>Year completed:</label>
      <input  type="text" id = "landmark_year_completed" name="landmark[year_completed]"></input>
    <br> 
  <label>Choose a figure:</label>
 <br>
  <%Figure.all.each do |figure|%>
  <input type="checkbox" name="landmark_figure" value = "<%=figure.id%>" id = "<%=figure.id%>"> <%=figure.name%></input>
  <%end%>
  <br>
   <label>and/or, create a new figure:</label>
    <br>
    <label>Name:</label>
      <input  type="text" id = "figure_name" name="figure_name"></input>
    <br>
  <input type="submit" value="Create New Landmark">
</form>
