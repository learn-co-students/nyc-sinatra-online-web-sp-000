<h2>Create New Landmark</h2>

<!-- add content here -->
<form action="/landmarks" method="post">
  <p>Name: <input id="landmark_name" type="text" name="landmark[name]">
  Year: <input id="landmark_year_completed" type="number" name="landmark[year_completed]"></p>
<br>
  <h3><label>Titles</label></h3>
    <%@titles.each do |title|%>
      <p><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%></p>
    <%end%>

  <p><label><b>Create New Title:</b></label>
  <input id="new_title" type="text" name="title[name]"></p>
  <br>

  <h3><label>Figures</label></h3>
  <%@figures.each do |figure|%>
    <p><input id="figure_<%=figure.id%>" type="checkbox" name="landmark[figure_ids][]" value="<%=figure.id%>"><%=figure.name%></p>
  <%end%>

  <p><label><b>Create New Figure:</b></label></p>
  <p>Name: <input id="figure_name" type="text" name="figure[name]"></p>

  <input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
