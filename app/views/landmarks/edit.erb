<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="landmark_name">Landmark Name</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
  <br>

  <label for="landmark_year_completed">Year Completed</label>
  <input type="number" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">
  <br>
  <br>

  <% @figures.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" value="<%= figure.id %>" id="<%= figure.id %>" <%= 'checked' if @landmark.figure_id == figure.id %>>
    <label for="<%= figure.id %>"><%= figure.name %></label>
    <br>
  <% end %>
  <br>

  <input type="submit" value="Edit Landmark" id="submit">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
