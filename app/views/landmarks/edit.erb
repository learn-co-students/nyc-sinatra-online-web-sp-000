<h2>Edit Historical Landmark</h2>
<h3><%= @landmark.name %>, <%= @landmark.year_completed %></h3>

<!-- add content here -->
<form method="POST" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <input type="text" name="landmark[name]" id="name" placeholder="Landmark Name"><br>
    <input type="text" name="landmark[year_completed]" id="year_completed" placeholder="Landmark Year Completed"><br>

    <input type="submit" value="Edit Landmark">

</form>

