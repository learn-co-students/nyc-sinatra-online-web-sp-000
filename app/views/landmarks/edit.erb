<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <p>Name: <input id='name' type="text" name="landmark[name]" value="<%= @landmark.name %>"></p>
  <p>Completed Year: <input id='year_completed' type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></p>
