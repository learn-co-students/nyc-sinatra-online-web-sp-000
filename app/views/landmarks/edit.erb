<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="landmark[name]">Landmark Name: </label>
  <input type="text" id="name" name="landmark[name]" value="<%=@landmark.name%>"><br>
  <label for="landmark[year]">Year Completed: </label>
  <input type="text" id="year_completed" name="landmark[year_completed]" value="<%=@landmark.year_completed.to_s%>"><br><br>

  <h3>Figure</h3>
  <label for="figure[name]">Figure: </label>
  <input type="text" name="figure[name]" value="<%=@landmark.figure.name%>">

  <br><br>
  <input type="submit" value="Edit Landmark">
</form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
