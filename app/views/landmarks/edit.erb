<form action="/landmarks/<%= @landmark.id %>" method="POST" >
    <input id="hidden" type="hidden" name="_method" value="patch">


     Edit <%= @landmark.name %>: <br>
    Name: <input type="text" name="landmark[name]" id="landmark_name"><br>
    Year Completed: <input type="text" name="landmark[year_completed]" id="landmark_year_completed" ><br>
    <input type="submit" value="update_landmark">
</form>    


