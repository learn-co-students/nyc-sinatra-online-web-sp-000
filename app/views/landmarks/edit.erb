<h2>Edit Historical Landmark</h2>

<form method=POST action="/landmarks/<%= @landmark.id %>">
<input type="hidden" id="hidden" name="_method" value="PATCH">

<p><strong>Name: </strong><input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"></p>

<p><strong>Year Completed: </strong><input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"></p>

<input type="submit" name="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
