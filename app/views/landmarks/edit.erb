<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form method="POST" action="/landmarks/<%= @landmark.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH" />
  <label for="name">Name:</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>" />

  <label for="year">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="year_completed"
    value="<%= @landmark.year_completed %>" />

  <input type="submit" name="submit" id="submit" value="Edit Landmark" />
</form>
<a class="button" href="/figures">Landmarks</a>
