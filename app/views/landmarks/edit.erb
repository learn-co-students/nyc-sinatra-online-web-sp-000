<h2>Edit Historical Landmark</h2>



<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

<label for="name">Name</label>
    <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">

 



  <label for="year_completed">Year</label>
    <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">



<h3>Figures</h3>

<% @figures.each do |figure| %>
    <label for="<%= figure.id%>"> <%= figure.name%> </label>
        <input type="radio" name="landmark[figure_id]" <%='checked' if @landmark.figure == figure %> id="landmark_<%=figure.id%>" value="<%= figure.id%>">
<% end %>

<h3> Create New Figure: </h3>
    <input type="text" name="figure[name]" id="new_figure"></input>

<br>
<input type="submit" value="Save edit to Landmark" id="Edit Landmark">

</form>


