<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label for="name">Name:</label><br>
    <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name"><br><br>
    <label for="year_completed">Year Completed:</label><br>
    <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">
    <br><br>
    <input type="submit" value="Edit Landmark">
</form>
