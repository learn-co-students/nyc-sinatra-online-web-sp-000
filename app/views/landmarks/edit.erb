<h2>Edit Historical Landmark</h2>

 <form action='/landmarks/<%= @landmark.id %>' method='POST'>
 <input id='hidden' type='hidden' name='_method' value='PATCH'>
 <p><input id='name' type='text' name='landmark[name]' value='<%= @landmark.name %>'></p>
 <p><input id='year_completed' type='text' name='landmark[year_completed]' value='<%= @landmark.year_completed %>'></p>
 <input id='Edit Landmark' type='submit' name='Edit Landmark' value='Edit Landmark'>
 </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
