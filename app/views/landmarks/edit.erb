<h1>Edit Landmark</h1>

    <form action="/landmarks/<%= @landmark.id %>" method="post">
      <label>Name:</label>
      <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name"><br>
      
      <label>Year Completed:</label>
      <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed"><br><br>
      
      <label>Landmark Figures:</label>
      <% @figures.each do |figure| %>
        <input type="checkbox" name="landmark[figure_id]" value="<%= figure.id %>" <%= 'checked' if @landmark.figure == figure%>/>
        <%= figure.name %>
      <%end%>
      <br>
      
      <input type="hidden" name="_method" value="patch">
      <input type="submit" value="Edit Landmark">
    </form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
