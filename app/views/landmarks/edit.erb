<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
    <p>Landmark Name: <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"></p>
    <p>Year Completed: <input type="integer" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed.to_s %>"></p>
    <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
