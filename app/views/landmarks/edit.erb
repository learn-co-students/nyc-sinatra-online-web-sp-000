<h2>Edit <%= @landmark.name %></h2>

  <form method="post" action="/landmarks/<%= @landmark.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch" />

    <h3><label for="landmark_name">New Name:</label></h3>
    <input id="name" name="landmark[name]" type="text" />

    <h3><label for="landmark_year_completed">New Year Completed:</label></h3>
    <input id="year_completed" name="landmark[year_completed]" type="text" value="<%= @landmark.year_completed %>" />

    <input type="submit" value="Edit Landmark" />

  </form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
