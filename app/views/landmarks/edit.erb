<h2>Edit <%= @landmark.name %></h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="name">Name:</label>
<input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"></p>
<p><label for="year">Year:</label>
<input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"></p>
<input type="submit" id="Edit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
