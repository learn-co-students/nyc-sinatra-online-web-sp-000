<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <p><label for="name">Name</label>
  <input id="name" type="text" name="landmark[name]" value=<%=@landmark.name%>></p>
  <p><label for="year_completed">Year Completed</label>
  <input id="year_completed" type="text" name="landmark[year_completed]" value=<%=@landmark.year_completed%>></p>
   
   <input type="submit" value="Edit Landmark">

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
