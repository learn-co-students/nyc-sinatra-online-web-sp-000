<h2>Edit Historical Landmark</h2>

<h1><%= @landmark.name %> completed <%= @landmark.year_completed.to_s %></h1>
<form action="/landmarks/<%= @landmark.id %>" method='POST'>
    <input type="hidden" id="hidden" name="_method" value="patch">
        <h3>Edit landmark: </h3>
            <label>Name: </label><input type='text' id='name' name='landmark[name]'>
            <label>Year: </label><input type='text' id='year_completed' name='landmark[year_completed]'><br>

    <br><input type='submit' id='submit' value="Edit Landmark">
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
