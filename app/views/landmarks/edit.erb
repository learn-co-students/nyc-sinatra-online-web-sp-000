<h2>Edit Historical Landmark</h2>

<form method= "post" action= '/landmarks/<%= @landmark.id %>'>
    <input type= "hidden" id= "hidden" name= "_method" value= "patch">
    <h3>Current Name: <%= @landmark.name %></h3>
    <p>Change Name: <input type= "text" name= "landmark[name]" id= "name"></p>
    <h3>Current Name: <%= @landmark.year_completed %></h3>
    <p>Change Year Completed: <input type= "text" name= "landmark[year_completed]" id= "year_completed">
    <input type= "submit" name= "Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
