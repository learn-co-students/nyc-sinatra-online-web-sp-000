<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
	<input type="hidden" id="hidden" name="_method" value="PATCH">
	<h3>Landmark: <%= @landmark.name %></h3>
	<h3>Year Completed: <%= @landmark.year_completed %></h3>

	<br>

	<p>Name: <input type="text" name="landmark[name]" id="name"></p>
	<p>Year Completed: <input type="text" name="landmark[year_completed]" id="year_completed"></p>
	<input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
