<h2>Edit Historical Landmark</h2>
<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
  <label for="year_completed" value="<%= @landmark.year_completed %>">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>">
  <% Figure.all.each do |f| %>
    <input type="radio" name="landmark[figure_id]" id="figure_<%= f.id %>" value="<%= f.id %>">
    <label for="figure_<%= f.id %>"><%= f.name %></label>
  <% end %>
  <h3>Create New Figure</h3>
  <label for="new_figure">Figure Name</label>
  <input type="text" name="figure[name]" id="new_figure">
  <button type="submit">Edit Landmark</button>
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
