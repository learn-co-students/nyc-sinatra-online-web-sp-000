<h2>Edit Historical Landmark: <%= @landmark.name %></h2>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<p><label for="landmark[name]">Name: </label>
<input type="text" name="landmark[name]" id="landmark_name">
</p>
<p><label for="landmark[year_completed]">Name: </label>
<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
</p>

<p>Edit Figures:
<% @figures.each do |figure| %>
 <br> <input type="checkbox" name="landmark[figure_ids][]" id="figure_<%=figure.id%>" value="<%=figure.id%>" <%= 'checked' if @landmark.figures.include?(figure) %>>
 <%= figure.name %>
<% end %>
</p>
<p>Or create a new figure:<br>
<label for="figure[name]">Name: </label>
  <input type="text" name="figure[name]" id="new_figure">
</p>

<input type="submit" value="Edit Landmark">
</form>
