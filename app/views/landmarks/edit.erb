<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method='post'>
    <input id ="hidden" type="hidden" name="_method" value="patch">
    <label for "landmark[name]">Landmark Name: </label>
    <input type="text" name="landmark[name]" id='landmark_name' value="<%= @landmark.name %>>
    <br/>
    <label for "landmark[year_completed]>Year Completed: </label>
    <input type="text" name='landmark[year_completed]' id='landmark_year_completed' value="<%= @landmark.year_completed %>">
    <br/>
    <input type='submit' value='Update Landmark'>
</form>

<a class="button" href="/landmarks">Landmarks</a>
