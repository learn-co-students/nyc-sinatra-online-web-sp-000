<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
<label><%=@landmark.name%></label>

<label>Edit Landmark Name</label>
<input type="text" id="name" value="<%=@landmark.name%>" name="landmark[name]">
<br>

<label>Edit Landmark Year Completed</label>
<input type="text" id="year_completed" value="<%= @landmark.year_completed %>" name="landmark[year_completed]">

<input type="submit" id="Edit Landmark" value="save">

</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
