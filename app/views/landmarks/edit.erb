<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id%>">
  <input type="hidden" name="_method" id="hidden" value="patch">
  <p><input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>"></p>
  <p><input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>"></p>
  <input type="submit" id="Edit Landmark" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
