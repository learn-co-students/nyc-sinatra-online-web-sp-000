<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="name">Name:</label>
    <input id="name" value="<%= @landmark.name %>" type="text" name="landmark[name]"><br>
    <label for="year">Year Completed:</label>
    <input id="year_completed" value="<%= @landmark.year_completed %>" type="text" name="landmark[year_completed]"><br><br>
    <input type="submit" id="Edit Landmark" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a><br>
<a class="button" href="/">Home</a>
