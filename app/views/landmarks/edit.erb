<h2>Edit Historical Landmark</h2>

<form action='/landmarks' method='POST'>
  <input type='hidden' id='hidden' name='_method' value="PATCH">
  <input type='hidden' id='hidden' name='id' value="<%= @landmark.id %>">
  <label>Edit Landmark: </label>
    <input type='text' name='landmark[name]' id='name' value='<%= @landmark.name %>'>
  <label>Year: </label>
    <input type='text' name='landmark[year_completed]' id='year_completed' value='<%= @landmark.year_completed %>'><br>
  <br>
  <input type='submit' value="Edit Landmark">
</form>
