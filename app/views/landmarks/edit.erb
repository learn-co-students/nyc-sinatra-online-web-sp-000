<h2>Edit Historical Landmark</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Year Completed</th>
  </tr>
  <tr>
    <td><%= @landmark.name %></td>
    <td><%= @landmark.year_completed %></td>
  </tr>
<table>
<br>
<form method="POST" action="/landmarks/<%=@landmark.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    Name:<input type="text" name="landmark[name]" id="name"><br>
    Year Completed:<input type="text" name="landmark[year_completed]" id="year_completed"><br>

    <input type="submit" value="Edit Landmark">

</form>
<br>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
