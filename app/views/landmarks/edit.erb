<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%= @landmark.id %>">
<input type="hidden" id="hidden" name="_method" value="patch">
    <label>Name</label><input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"><br>
    <label>Year Completed</label><input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"><br>
    <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
