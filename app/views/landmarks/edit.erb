<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name: <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"</label>
  <label>Year Completed: <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"</label>

  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
