<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action='/landmarks/<%= @landmark.id %>' method="POST">
  <input type="hidden" id="hidden" name='_method' value="patch">
  <input type="text" id='name' name='landmark[name]' value='<%= @landmark.name %>'>
  <input type="number" id='year_completed' name='landmark[year_completed]' value="<%= @landmark.year_completed %>">
  <input type='submit' id='Edit Landmark' value='Edit Landmark'>
</form>

