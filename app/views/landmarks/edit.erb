<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id%>">
<input type="hidden" name="_method" value="patch">
<table>
  <tr>
    <th>Name</th>
  </tr>
  <tr>
    <td><input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"</td>
    <td><input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"</td>
  </tr>
<table>
<input type="submit" value="Edit Landmark">
 </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

