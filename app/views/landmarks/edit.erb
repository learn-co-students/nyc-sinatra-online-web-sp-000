<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
    <h1>Landmarks</h1>

    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="landmark[]" id="<%= landmark.name %>" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %><br>

    <h2>Create New Landmark</h2>

    <input type="hidden" id="hidden" name="_method" value="patch">
    <label for="name">Name: </labe>
    <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
    <label for="year_completed">Year: </labe>
    <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed%>">

    <input type="submit" id="submit" value="Edit Landmark">

</form>
<br>
<br>

<a class="button" href="/landmarks">Landmarks</a>
