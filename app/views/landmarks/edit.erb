<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input id="name" type="text" name="landmark[name]" value="<%=@landmark.name%>"></p>
  <p>Year: <input id="year_completed" type="number" name="landmark[year_completed]" value="<%=@landmark.year_completed%>"></p>
<br>

  <h3><label>Figures</label></h3>
  <%@figures.each do |figure|%>
    <p><input id="figure_<%=figure.id%>" type="checkbox" name="landmark[figure_ids][]" value="<%=figure.id%>"><%=figure.name%></p>
  <%end%>

  <input type="submit" value="Edit Landmark">
</form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
