<h2>Edit Historical Landmark</h2>

<%=@landmark.name%>
<%=@landmark.year_completed%>


<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>Create New Landmark</p>
  <label for="landmark[name]">Landmark Name</label>
  <input type="text" name="landmark[name]" id="name"><br>

  <label for="landmark[year]">Landmark Year</label>
  <input type="text" name="landmark[year_completed]" id="year_completed"><br>

  <p>Landmarks</p>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name%><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %>

  <input type="submit" value="Edit Landmark">

</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
