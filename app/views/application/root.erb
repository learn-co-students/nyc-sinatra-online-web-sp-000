<h1>Create a New Figure!</h1>
<br>
<form method="/figures" action="post">
 <label for="figure_name">Name</label>
 <input type="text" name="figure[name]" id="figure_name">
 <br>
 <label for="title"><h2>Titles</h2></label>
 <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
<% end %>
<br>
 <label for="figure_name"><h2>Create New Title:</h2></label>
 <input type="text" name="title[name]" id="new_title">
 <br>
 <label for="title"><h2>Landmarks</h2></label>
  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
<% end %>
<br>
<label for="figure_name"><h2>Create New Lankmark:</h2></label>
<p>Name: <input type="text" name="landmark[name]" id="new_landmark"></input></p>
<p>Year: <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input></p>
<input type="submit" value="Create New Figure">
</form>
