<h1>Edit your figure</h1>

<form action = '/figures/<%=@figure.id%>' method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<h3>Name <input type="text" name="figure[name]" id="figure_name" value='<%=@figure.name%>'></h3>

<h2>Titles</h2>
<%Title.all.each do |title|%> 
<p><%=title.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>></p>
<%end%>

<h3>Create a new title: </h3>
<input type="text" name="title[name]" id="new_title">

<h2>Landmarks</h2>
<%Landmark.all.each do |landmark|%> 
<p><%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>></p>
<%end%>

<h3>Create new landmark: </h3>
<p>Name: <input type="text" name="landmark[name]" id="new_landmark">
Year: <input type="text" name="year" id="year"> </p>

<br>
<input type="submit" name="Edit Figure" id="Edit Figure">
</form>